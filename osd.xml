<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mythuitheme SYSTEM "../mythuitheme.dtd">
<mythuitheme>
    <!-- ===================================================== -->
    <!--     FONT                                              -->
    <!-- ===================================================== -->
    <fontdef name="normal" face="Droid Sans">
        <color>#FFFFFF</color>
        <pixelsize>20</pixelsize>
        <weight>light</weight>
    </fontdef>
    <fontdef name="title" from="normal">
        <pixelsize>24</pixelsize>
        <weight>bold</weight>
    </fontdef>
    <fontdef name="titlesmall" from="normal">
        <pixelsize>22</pixelsize>
        <weight>bold</weight>
    </fontdef>
    <fontdef name="small" from="normal">
        <pixelsize>18</pixelsize>
    </fontdef>
    <fontdef name="verysmall" from="normal">
        <pixelsize>16</pixelsize>
    </fontdef>

    <!-- ===================================================== -->
    <!--     SHAPE - BACKGROUND                                -->
    <!-- ===================================================== -->
    <shape name="shape_popup_background">
        <area>400,60,480,600</area>
        <type>box</type>
        <fill color="#000000" alpha="230" />
        <line color="#AAAAAA" alpha="150" width="1" />
    </shape>
    <shape name="shape_title_base">
        <area>270,80,740,80</area>
        <type>roundbox</type>
        <fill style="gradient">
            <gradient direction="diagonal" alpha="255">
                <stop position="0" color="#202020" />
                <stop position="45" color="#262626" />
                <stop position="55" color="#303030" />
                <stop position="100" color="#7f7f7f" />
            </gradient>
        </fill>
        <line color="#FFFFFF" alpha="255" width="1" />
        <cornerradius>4</cornerradius>
    </shape>
    <!-- ===================================================== -->
    <!--     SHAPE - LINE                                      -->
    <!-- ===================================================== -->
    <shape name="shape_line_horiz">
        <fill style="gradient">
            <gradient direction="horizontal" alpha="255">
                <stop position="0" color="#4D3F3F" />
                <stop position="50" color="#FFFFFF"/>
                <stop position="100" color="#4D3F3F" />
            </gradient>
        </fill>
    </shape>
    <shape name="shape_line_vert">
        <fill style="gradient">
            <gradient direction="vertical" alpha="255 ">
                <stop position="0" color="#4D3F3F" />
                <stop position="50" color="#FFFFFF"/>
                <stop position="100" color="#4D3F3F" />
            </gradient>
        </fill>
    </shape>

    <!-- ===================================================== -->
    <!--     BUTTONLIST                                        -->
    <!-- ===================================================== -->
    <buttonlist name="buttonlist_base">
        <area>0,0,740,300</area> <!--TO DEFINE INTO THE WINDOW!!!!!-->
        <align>top,hcenter</align>
        <layout>vertical</layout>
        <spacing>4</spacing>
        <wrapstyle>selection</wrapstyle>
        <arrange>stack</arrange>
        <buttonarea>0,0,100%,100%-25</buttonarea>
        <statetype name="buttonitem">
            <area>0,0,100%,100%</area>
            <!--
                    ACTIVE
            -->
            <state name="active">
                <area>0,0,100%,35</area>
<!--                <shape name="item_box4">
                    <area>0,0,100%,100%</area>
                    <fill color="#404544" alpha="0" />
                </shape>-->
                <shape name="item_box"><!-- horizontal background -->
                    <area>0,0,100%,100%</area>
                    <type>box</type>
                    <cornerradius>0</cornerradius>
                    <fill color="#AEAEAE" alpha="50" />
                    <line color="#AEAEAE" alpha="0" width="0" />
                </shape>
                <shape name="item_box2"><!-- vertical background -->
                    <area>0,0,100%,100%</area>
                    <type>box</type>
                    <cornerradius>0</cornerradius>
                    <fill color="#AEAEAE" alpha="0" />
                    <line color="#AEAEAE" alpha="0" width="0" />
                </shape>
                <shape name="item_box3"><!--sign for selected item -->
                    <area>0,0,10,100%</area>
                    <fill color="#FFFFFF" alpha="0" />
                    <line color="#AEAEAE" alpha="0" width="0" />
                </shape>
                <textarea name="buttontext">
                    <alpha>255</alpha>
                    <area>15,0,100%-15,100%</area>
                    <font>normal</font>
                    <multiline>no</multiline>
                    <align>allcenter</align>
                </textarea>
                <!-- checkbox -->
                <statetype name="buttoncheck">
                    <area>100%-35,0,100%,100%</area>
                    <state type="off">
                        <imagetype name="checkoff">
                            <area>0,0,100%,100%</area>
                            <filename>images/shared/check_none.png</filename>
                        </imagetype>
                    </state>
                    <state type="half">
                        <imagetype name="checkhalf">
                            <area>0,0,100%,100%</area>
                            <filename>images/shared/check_half.png</filename>
                        </imagetype>
                    </state>
                    <state type="full">
                        <imagetype name="checkfull">
                            <area>0,0,100%,100%</area>
                            <filename>images/shared/check_full.png</filename>
                        </imagetype>
                    </state>
                </statetype>
                <imagetype name="buttonarrow">
                    <area>100%-20,9,15,15</area> <!-- (buttonarea-width-20),9,15,15 -->
                    <filename>images/shared/arrow_right.png</filename>
                </imagetype>
            </state>
            <!--
                    SELECTED ACTIVE
            -->
            <state name="selectedactive" from="active">
                <area>0,0,100%,35</area>
<!--                <shape name="item_box4">
                    <area>0,0,100%,100%</area>
                    <fill color="#404544" alpha="0" />
                </shape>-->
                <shape name="item_box"><!-- horizontal background -->
                    <area>0,0,100%,100%</area>
                    <fill style="gradient">
                        <gradient direction="horizontal">
                            <stop position="0" color="#AEAEAE"  alpha="225" />
                            <stop position="25" color="#AEAEAE"  alpha="175" />
                            <stop position="50" color="#AEAEAE" alpha="125" />
                            <stop position="75" color="#AEAEAE" alpha="100" />
                            <stop position="90" color="#AEAEAE" alpha="70" />
                            <stop position="100" color="#AEAEAE" alpha="70" />
                        </gradient>
                    </fill>
                </shape>
                <shape name="item_box2"><!-- vertical background -->
                    <area>0,0,100%,100%</area>
                    <fill style="gradient">
                        <gradient direction="vertical">
                            <stop position="0" color="#AEAEAE"  alpha="70" />
                            <stop position="25" color="#AEAEAE"  alpha="85" />
                            <stop position="50" color="#AEAEAE" alpha="100" />
                            <stop position="75" color="#AEAEAE" alpha="85" />
                            <stop position="100" color="#AEAEAE" alpha="70" />
                        </gradient>
                    </fill>
                </shape>
                <shape name="item_box3"><!--sign for selected item -->
                    <area>0,0,5,100%</area>
                    <fill color="#AEAEAE" alpha="255" />
                </shape>
                <textarea name="buttontext">
                    <font>normal_selected</font>
                    <scroll direction="horizontal" />
                    <cutdown>no</cutdown>
                </textarea>
            </state>
            <!--
                    INACTIVE
            -->
            <state name="inactive" from="active"/>
            <!--
                    SELECTED INACTIVE
            -->
            <state name="selectedinactive" from="selectedactive">
                <shape name="item_box3">
                    <fill color="#AEAEAE" alpha="0" />
                </shape>
            </state>
        </statetype>
        <!--
              ARROWS
        -->
        <statetype name="upscrollarrow">
            <area>10,100%-20,15,15</area> <!--<10,(max-higth -20),15,15>-->
            <state type="off">
                <imagetype name="up_off">
                    <filename>images/shared/arrow_up.png</filename>
                    <alpha>45</alpha>
                </imagetype>
            </state>
            <state type="full">
                <imagetype name="up_on">
                    <filename>images/shared/arrow_up.png</filename>
                    <alpha>125</alpha>
                </imagetype>
            </state>
        </statetype>
        <statetype name="downscrollarrow">
            <area>30,100%-20,15,15</area><!--<30,(max-higth -20),15,15>-->
            <state type="off">
                <imagetype name="down_off">
                    <filename>images/shared/arrow_down.png</filename>
                    <alpha>45</alpha>
                </imagetype>
            </state>
            <state type="full">
                <imagetype name="down_on">
                    <filename>images/shared/arrow_down.png</filename>
                    <alpha>125</alpha>
                </imagetype>
            </state>
        </statetype>
    </buttonlist>
    <!-- ===================================================== -->
    <!--     TEXTEDIT                                          -->
    <!-- ===================================================== -->
    <textedit name="textedit_base">
        <area>0,0,180,30</area>
        <statetype name="background">
            <area>0,0,100%,100%</area>
            <state name="active">
                <area>0,0,100%,100%</area>
                <shape name="background">
                    <area>0,0,100%,100%</area>
                    <type>box</type>
                    <line color="#FFFFFF" alpha="120" width="0" />
                    <fill color="#6D6B6B" alpha="120" />
                </shape>
            </state>
            <state name="selected">
                <area>0,0,100%,100%</area>
                <shape name="background">
                    <area>0,0,100%,100%</area>
                    <type>box</type>
                    <line color="#FFFFFF" alpha="255" width="0" />
                    <fill color="#4A96E0" alpha="255" />
                </shape>
            </state>
            <state name="inactive">
                <area>0,0,100%,100%</area>
                <shape name="background">
                    <area>0,0,100%,100%</area>
                    <type>box</type>
                    <line color="#FFFFFF" alpha="90" width="0" />
                    <fill color="#6D6B6B" alpha="90" />
                </shape>
            </state>
        </statetype>
        <imagetype name="cursor">
            <shape name="cursor_shape">
                <area>0,1,2,100%-2</area>
                <type>box</type>
                <fill color="#FFFFFF" alpha="255" />
            </shape>
        </imagetype>
        <textarea name="text">
            <area>2,1,100%-4,100%-2</area>
            <font>normal</font>
            <align>left,vcenter</align>
        </textarea>
    </textedit>
    <!-- ====================================================== -->
    <!--     BUTTON                                             -->
    <!-- ====================================================== -->
    <button name="button_base">
        <area>0,0,120,35</area>
        <statetype name="buttonstate">
            <area>0,0,100%,100%</area>
            <!--
                    ACTIVE
            -->
            <state name="active">
                <area>0,0,100%,100%</area>
                <shape name="button_background">
                    <area>0,0,100%,100%</area>
                    <type>roundbox</type>
                    <cornerradius>4</cornerradius>
                    <line color="#FFFFFF" alpha="150" width="1" />
                    <fill style="gradient">
                        <gradient direction="vertical" alpha="255">
                            <stop position="0" color="#474645" alpha="80" />
                            <stop position="100" color="#474645" />
                        </gradient>
                    </fill>
                </shape>
                <textarea name="text">
                    <area>0,0,100%,100%</area>
                    <align>allcenter</align>
                    <font>normal</font>
                </textarea>
            </state>
            <!--
                    SELECTED ACTIVE
            -->
            <state name="selected" from="active">
                <shape name="button_background">
                    <!--<area>0,0,120,34</area>-->
                    <type>roundbox</type>
                    <cornerradius>4</cornerradius>
                    <line color="#FFFFFF" alpha="255" width="1" />
<!--                        <fill color="#474645" alpha="255" />-->
                    <fill style="gradient">
                        <gradient direction="horizontal" alpha="255">
                            <stop position="0" color="#4A96E0"  alpha="100" />
                            <stop position="60" color="#4A96E0" alpha="200" />
                            <stop position="100" color="#4A96E0" alpha="230" />
                        </gradient>
                    </fill>
                </shape>
            </state>
            <!--
                    DISABLED
            -->
            <state name="disabled" from="active">
                <alpha>150</alpha>
            </state>
            <!--
                    PUSHED
            -->
            <state name="pushed">
                <shape name="button_background">
                    <type>roundbox</type>
                    <cornerradius>4</cornerradius>
                    <line color="#FFFFFF" alpha="255" width="1" />
                    <fill color="#474645" alpha="80" />
                </shape>
                <textarea name="text">
                    <align>allcenter</align>
                    <font>normal_selected</font>
                </textarea>
            </state>
        </statetype>
    </button>

