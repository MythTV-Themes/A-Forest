<?xml version="1.0" encoding="utf-8"?>
<mythuitheme>
    <window name="status">
        <group name="group_shapes" from="group_shapes_windows_default">
            <imagetype name="wallpaper">
                <filename>images/backgrounds/normal_storage.jpg</filename>
            </imagetype>
            <textarea name="text_window_title">
                <value>System Status</value>
            </textarea>
        </group>

        <!-- ===================================================== -->
        <!--            INSIDE LINES                               -->
        <!-- ===================================================== -->
        <shape name="line_horiz" from="shape_line_horiz">
            <area>10,510,1280,1</area>
        </shape>
        <shape name="line_vert" from="shape_line_vert">
          <area>400,70,1,448</area>
        </shape>
        <!-- ===================================================== -->
        <!--            CATEGORIES                                 -->
        <!-- ===================================================== -->
        <buttonlist name="category" from="buttonlist_base">
            <area>10,80,380,420</area>
            <buttonarea>0,0,100%,390</buttonarea>
            <statetype name="upscrollarrow">
              <area>10,400,15,15</area>
            </statetype>
            <statetype name="downscrollarrow">
              <area>30,400,15,15</area>
            </statetype>
        </buttonlist>
        <!-- ===================================================== -->
        <!--            LOG                                        -->
        <!-- ===================================================== -->
        <buttonlist name="log" from="buttonlist_base">
            <area>410,80,860,420</area>
            <buttonarea>0,0,860,390</buttonarea>
            <statetype name="buttonitem">
                <state name="active"><textarea name="buttontext"><align>left,vcenter</align></textarea></state>
                <state name="selectedactive"><textarea name="buttontext"><align>left,vcenter</align></textarea></state>
                <state name="inactive"><textarea name="buttontext"><align>left,vcenter</align></textarea></state>
                <state name="selectedinactive"><textarea name="buttontext"><align>left,vcenter</align></textarea></state>
            </statetype>
            <statetype name="upscrollarrow">
              <area>10,400,15,15</area>
            </statetype>
            <statetype name="downscrollarrow">
              <area>30,400,15,15</area>
            </statetype>
        </buttonlist>
        <!-- ===================================================== -->
        <!--         LOG DETAILS                                                                             -->
        <!-- ===================================================== -->
        <textarea name="helptext" from="textarea_base">
            <area>70,490,1170,210</area>
            <font>normal</font>
            <value>This screen displays the status of various system components</value>
            <multiline>yes</multiline>
            <cutdown>yes</cutdown>
            <align>left,vcenter</align>
        </textarea>
    </window>
</mythuitheme>
