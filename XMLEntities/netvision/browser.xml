    <window name="browser">

        <buttonlist name="videos">
            <area>15,440,770,150</area>
            <layout>horizontal</layout>
            <scrollstyle>center</scrollstyle>
            <spacing>9</spacing>
            <buttonarea>38,0,690,155</buttonarea>
            <statetype name="buttonitem">
                <state name="active">
                    <area>0,0,90,155</area>
                    <imagetype name="buttonbackground" />
                    <imagetype name="buttonimage">
                        <area>10,15,80,120</area>
                        <preserveaspect>true</preserveaspect>
                        <filename>shared/grid_noimage.png</filename>
                    </imagetype>
                    <statetype name="nodetype">
                        <position>35,80</position>
                        <state name="subfolder">
                            <imagetype name="icon">
                                <area>0,0,50,50</area>
                                <filename>shared/directory.png</filename>
                                <preserveaspect>yes</preserveaspect>
                            </imagetype>
                        </state>
                        <state name="upfolder">
                            <imagetype name="icon">
                                <area>0,0,50,50</area>
                                <filename>shared/updirectory.png</filename>
                                <preserveaspect>yes</preserveaspect>
                            </imagetype>
                        </state>
                    </statetype>
                    <textarea name="childcount" from="basetextarea">
                        <area>37,97,40,20</area>
                        <font>basesmallblack</font>
                        <align>right</align>
                    </textarea>
                </state>
                <state name="selectedactive" from="active">
                    <imagetype name="buttonbackground">
                        <position>5,7</position>
                        <filename>mv_browse_selector.png</filename>
                    </imagetype>
                </state>
            </statetype>
            <statetype name="upscrollarrow">
                <position>0,42</position>
                <showempty>yes</showempty>
                <state type="full">
                    <imagetype name="upon">
                        <filename>left_arrow.png</filename>
                    </imagetype>
                </state>
            </statetype>
            <statetype name="downscrollarrow">
                <position>730,42</position>
                <state type="full">
                    <imagetype name="dnon">
                        <filename>right_arrow.png</filename>
                    </imagetype>
                </state>
            </statetype>
        </buttonlist>

        <textarea name="title" from="basetextarea">
            <area>40,15,700,100</area>
            <multiline>yes</multiline>
            <font>baseextralarge</font>
        </textarea>

        <imagetype name="preview">
            <area>30,90,203,311</area>
            <preserveaspect>yes</preserveaspect>
        </imagetype>

        <textarea name="description" from="basetextarea">
            <area>245,97,523,145</area>
            <multiline>yes</multiline>
        </textarea>

        <textarea name="nosites" from="description">
            <value>You haven't added any Sites/RSS Feeds yet!  To add a site, press MENU, then choose "Scan/Manage Subscriptions," then "Manage Site Subscriptions."</value>
        </textarea>

        <textarea name="lenlbl" from="basetextarea">
            <area>260,343,150,35</area>
            <value>Runtime</value>
        </textarea>

        <textarea name="duration" from="basetextarea">
            <area>260,373,350,35</area>
        </textarea>

        <textarea name="authlbl" from="basetextarea">
            <area>470,343,90,35</area>
            <value>Author</value>
        </textarea>

        <textarea name="author" from="basetextarea">
            <area>470,373,100,35</area>
        </textarea>

        <textarea name="userratinglbl" from="basetextarea">
            <area>620,343,150,35</area>
            <align>right,top</align>
            <value>Rating</value>
        </textarea>

        <textarea name="rating" from="basetextarea">
            <area>670,373,100,35</area>
            <align>hcenter,top</align>
        </textarea>

    </window>
