<?xml version="1.0" encoding="utf-8"?>
<mythuitheme>
    <window name="controls">
        <area>0,0,1280,720</area>
        <imagetype name="wallpaper" from="image_wallpaper_base">
            <area>0,0,1280,720</area>
            <filename>images/backgrounds/keys.jpg</filename>
        </imagetype>

        <textarea name="heading" from="textarea_heading_base">
            <textarea name="text">
                <value>Key Shortcuts</value>
            </textarea>
        </textarea>

        <textarea name="textarea_clock" from="textarea_clock_base"/>

        <shape name="status_background" from="shape_background_base"/>

        <textarea name="leftdesc" from="textarea_base">
            <area>150,100,350,30</area>
            <value>Contexts</value>
            <font>title</font>
            <align>allcenter</align>
        </textarea>
        <buttonlist name="leftlist" from="buttonlist_base">
            <area>150,150,350,400</area>
            <showarrow>no</showarrow>
        </buttonlist>

        <textarea name="rightdesc" from="textarea_base">
            <area>650,100,350,30</area>
            <value>Actions</value>
            <font>title</font>
            <align>allcenter</align>
        </textarea>
        <buttonlist name="rightlist" from="buttonlist_base">
            <area>650,150,350,400</area>
        </buttonlist>

        <textarea name="description" from="textarea_base">
            <area>275,580,700,30</area>
            <multiline>yes</multiline>
            <align>left,vcenter</align>
            <font>text</font>
            <value>This screen displays the status of various system components</value>
        </textarea>


        <button name="action_0" from="button_base">
            <area>200,650,150,30</area>
        </button>
        <button name="action_1" from="button_base">
            <area>400,650,150,30</area>
        </button>
        <button name="action_2" from="button_base">
            <area>600,650,150,30</area>
        </button>
        <button name="action_3" from="button_base">
            <area>800,650,300,30</area>
        </button>
    </window>


    <window name="keygrabpopup">
        <area>0,0,1280,720</area>
        <shape name="shape_darken_background" from="shape_darken_base"/>

        <shape name="popup_background">
            <area>450,260,380,200</area>
            <type>roundbox</type>
            <fill color="#000000" alpha="250" />
            <line color="#999999" alpha="250" width="1" />
            <cornerradius>2</cornerradius>
        </shape>

<!--        <shape name="shape_title" from="shape_title_base">
            <area>500,280,280,80</area>
        </shape>-->

        <textarea name="message">
            <area>470,280,340,80</area>
            <font>normal</font>
            <multiline>yes</multiline>
            <align>allcenter</align>
            <cutdown>yes</cutdown>
        </textarea>

        <button name="cancel" from="button_base">
            <area>510,400,120,34</area>
            <value>Cancel</value>
        </button>

        <button name="ok" from="button_base">
            <area>650,400,120,34</area>
            <value>Ok</value>
        </button>
    </window>

</mythuitheme>