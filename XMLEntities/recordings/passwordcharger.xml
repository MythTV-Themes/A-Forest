    <window name="passwordchanger">

        <shape name="shape_darken_background" from="shape_darken_base"/>

        <shape name="passwordchanger_background">
            <area>305,150,700,295</area>
            <type>roundbox</type>
            <fill color="#000000" alpha="255" />
            <line color="#CCCCCC" alpha="255" width="1" />
            <cornerradius>2</cornerradius>
        </shape>

        <shape name="shape_title" from="shape_title_base">
            <area>325,170,660,80</area>
        </shape>

        <textarea name="title" from="textarea_base">
            <area>325,170,660,80</area>
            <align>allcenter</align>
            <font>title</font>
            <value>Change Password</value>
        </textarea>

        <textarea name="old_label" from="textarea_base">
            <area>325,280,200,30</area>
            <align>right,vcenter</align>
            <value>Old Password:</value>
        </textarea>

        <textedit name="oldpassword" from="textedit_base">
            <area>545,280,380,30</area>
        </textedit>

        <textarea name="new_label" from="textarea_base">
            <area>325,330,200,30</area>
            <align>right,vcenter</align>
            <value>New Password:</value>
        </textarea>

        <textedit name="newpassword" from="textedit_base">
            <area>545,330,380,30</area>
        </textedit>

        <button name="ok" from="button_base">
            <area>325,390,200,30</area>
            <value>OK</value>
        </button>
    </window>
