    <window name="watchrecordings">
        <imagetype name="fanart" from="image_wallpaper_base">
            <filename>images/backgrounds/tv2.jpg</filename>
        </imagetype>
        <imagetype name="layer" from="image_wallpaper_layer"/>

        <shape name="status_background" from="shape_background_base"/>

        <textarea name="heading" from="textarea_heading_base">
            <textarea name="text">
                <value>Watch Recordings</value>
            </textarea>
        </textarea>

        <textarea name="clock" from="textarea_clock_base"/>

        <shape name="separator_vertical" from="shape_line_vert">
            <area>390,75,2,610</area>
        </shape>

        <shape name="separator_horizontal" from="shape_line_horiz">
            <area>0,415,380,2</area>
        </shape>

        <!-- ===================================================== -->
        <!--   PREVIEW                                             -->
        <!-- ===================================================== -->
        <shape name="preview_shape" from="shape_background_base">
            <area>40,430,330,188</area>
        </shape>

        <imagetype name="preview">
            <area>43,433,324,182</area>
            <preserveaspect>yes</preserveaspect>
        </imagetype>

        <!-- ===================================================== -->
        <!--   INFO ICONS                                          -->
        <!-- ===================================================== -->
        <statetype name="commflagged">
            <state name="yes">
                <imagetype name="on">
                    <area>40,628,25,25</area>
                    <filename>images/tv-recordings/commflagged.png</filename>
                </imagetype>
            </state>
        </statetype>
        <statetype name="bookmark">
            <state name="yes">
                <imagetype name="on">
                    <area>100,628,25,25</area>
                    <filename>images/tv-recordings/bookmark.png</filename>
                </imagetype>
            </state>
        </statetype>
        <statetype name="watched">
            <state name="yes">
                <imagetype name="watched">
                    <area>130,628,25,25</area>
                    <filename>images/tv-recordings/watched.png</filename>
                </imagetype>
            </state>
        </statetype>
        <statetype name="videoprops">
            <state name="default">
            </state>
            <state name="hd1080">
                <imagetype name="hdtv">
                    <area>40,658,25,25</area>
                    <filename>images/tv-recordings/video/hd1080.png</filename>
                </imagetype>
            </state>
            <state name="hd720">
                <imagetype name="hdtv">
                    <area>40,658,25,25</area>
                    <filename>images/tv-recordings/video/hd720.png</filename>
                </imagetype>
            </state>
            <state name="hdtv">
                <imagetype name="hdtv">
                    <area>40,658,25,25</area>
                    <filename>images/tv-recordings/video/hdtv.png</filename>
                </imagetype>
            </state>
            <state name="widescreen">
                <imagetype name="widescreen">
                    <area>40,658,25,25</area>
                    <filename>images/tv-recordings/video/widescreen.png</filename>
                </imagetype>
            </state>
        </statetype>
        <statetype name="audioprops">
            <showempty>yes</showempty>
            <state name="stereo">
                <imagetype name="stereo">
                    <area>70,658,25,25</area>
                    <filename>images/tv-recordings/audio/stereo.png</filename>
                </imagetype>
            </state>
            <state name="surround">
                <imagetype name="surround">
                    <area>70,658,25,25</area>
                    <filename>images/tv-recordings/audio/surround.png</filename>
                </imagetype>
            </state>
            <state name="dolby">
                <imagetype name="dolby">
                    <area>70,658,25,25</area>
                    <filename>images/tv-recordings/audio/dolby.png</filename>
                </imagetype>
            </state>
            <state name="mono">
                <imagetype name="mono">
                    <area>70,658,25,25</area>
                    <filename>images/tv-recordings/audio/mono.png</filename>
                </imagetype>
            </state>
        </statetype>
        <statetype name="subtitletypes">
            <showempty>yes</showempty>
            <state name="cc">
                <imagetype name="cc">
                    <area>100,658,25,25</area>
                    <filename>images/tv-recordings/subtitles/cc.png</filename>
                </imagetype>
            </state>
            <state name="subtitles">
                <imagetype name="subtitles">
                    <area>100,658,25,25</area>
                    <filename>images/tv-recordings/subtitles/subtitles.png</filename>
                </imagetype>
            </state>
            <state name="onscreensub">
                <imagetype name="onscreensub">
                    <area>100,658,25,25</area>
                    <filename>images/tv-recordings/subtitles/onscreensub.png</filename>
                </imagetype>
            </state>
        </statetype>

        <!-- ===================================================== -->
        <!--     RECORDINGS GROUPS                                 -->
        <!-- ===================================================== -->
        <buttonlist name="groups" from="buttonlist_base">
            <area>0,75,370,330</area>
            <align>top,hcenter</align>
            <statetype name="buttonitem">
                <state name="active">
                    <textarea name="buttontext">
                        <area>40,1,100%,30</area>
                    </textarea>
                </state>
                <state name="selectedactive" from="active">
                    <shape name="shadow_selected" from="shape_shadow_horiz">
                        <area>0,0,100%,45</area>
                    </shape>
                    <textarea name="buttontext">
                        <area>40,1,100%,45</area>
                    </textarea>
                </state>
                <state name="inactive" from="active"><alpha>200</alpha></state>
                <state name="selectedinactive" from="selectedactive"><alpha>200</alpha></state>
            </statetype>
        </buttonlist>
        <!-- ===================================================== -->
        <!--     RECORDING LIST IN THE GROUP                       -->
        <!-- ===================================================== -->
        <buttonlist name="recordings" from="buttonlist_base">
            <arrange>stack</arrange>
            <area>410,75,870,600</area>
            <statetype name="buttonitem">
                <!--
                        ACTIVE
                -->
                <state name="active">
                    <area>0,0,870,55</area>
                    <!-- FIRST ROW -->
                    <textarea name="title">
                        <font>title</font>
                        <area>5,7,520,20</area>
                        <align>left,vcenter</align>
                        <cutdown>yes</cutdown>
                    </textarea>
                    <textarea name="channel">
                        <area>525,7,250,20</area>
                        <font>small</font>
                        <align>right,vcenter</align>
                        <cutdown>yes</cutdown>
                    </textarea>
                    <statetype name="jobstate">
                        <area>780,7,52,13</area>
                        <align>left,hcenter</align>
                        <state name="recording">
                            <imagetype name="animation">
                                <area>2,3,52,13</area>
                                <filepattern low="1" high="10">images/tv-recordings/processing/recording/recording_%1.png</filepattern>
                                <delay>120</delay>
                            </imagetype>
                        </state>
                        <state name="transcoding">
                            <imagetype name="animation">
                                <area>0,0,80,20</area>
                                <filepattern low="1" high="16">images/tv-recordings/processing/transcoding_%1.png</filepattern>
                                <delay>80</delay>
                            </imagetype>
                        </state>
                        <state name="flagging">
                            <imagetype name="animation">
                                <area>0,0,100,30</area>
                                <filepattern low="1" high="8">images/tv-recordings/processing/flagging_%1.png</filepattern>
                                <delay>80</delay>
                            </imagetype>
                        </state>
                    </statetype>
                    <!-- SECOND ROW -->
                    <statetype name="playlist">
                        <area>5,30,25,25</area>
                        <state name="yes">
                            <imagetype name="playlistimage">
                                <area>0,0,25,25</area>
                                <filename>images/tv-recordings/playlist.png</filename>
                            </imagetype>
                        </state>
                    </statetype>
                    <textarea name="subtitle" from="title">
                        <area>35,30,548,20</area>
                        <font>normal</font>
                        <align>left,vcenter</align>
                        <cutdown>yes</cutdown>
                        <template>%"|SUBTITLE|"%</template>
                    </textarea>
                    <textarea name="shortdate">
                        <area>550,30,225,20</area>
                        <font>small</font>
                        <align>right,bottom</align>
                        <cutdown>yes</cutdown>
<!--                         <template>%SHORTDATE% %STARTTIME%</template> -->
                        <template>%SHORTDATE|, %%STARTTIME%% - |ENDTIME%</template>
                    </textarea>
                    <statetype name="cutlist">
                        <area>785,29,20,20</area>
                        <state name="yes">
                            <imagetype name="on">
                                <area>0,0,20,20</area>
                                <filename>images/tv-recordings/cutlist.png</filename>
                            </imagetype>
                        </state>
                    </statetype>
                    <statetype name="autoexpire">
                        <area>810,29,20,20</area>
                        <state name="yes">
                            <imagetype name="on">
                                <area>0,0,20,20</area>
                                <filename>images/tv-recordings/autoexpire.png</filename>
                            </imagetype>
                        </state>
                    </statetype>
                </state>
                <!--
                        INACTIVE
                -->
                <state name="inactive" from="active"><alpha>150</alpha></state>
                <!--
                        SELECTED ACTIVE
                -->
                <state name="selectedactive" from="active">
                    <area>0,0,870,120</area>
                    <shape name="shadow_selected" from="shape_shadow_horiz">
                        <area>0,0,100%,100%</area>
                    </shape>
                    <!-- FIRST ROW (JUST THE SAME) -->
                    <!-- SECOND ROW (JUST THE SAME) -->
                    <!-- THIRTH ROW -->
                    <textarea name="description">
                        <area>5,53,830,50</area>
                        <font>small</font>
                        <multiline>yes</multiline>
                        <cutdown>yes</cutdown>
                        <align>vcenter,left</align>
                    </textarea>
                    <!-- FOURTH ROW -->
                    <textarea name="recstarttime">
                        <area>5,100,300,20</area>
                        <font>small</font>
                        <align>left,vcenter</align>
                        <cutdown>yes</cutdown>
                        <template>%recstarttime%% - |recendtime%</template>
                    </textarea>
                    <textarea name="filesize_str">
                        <area>630,100,200,20</area>
                        <font>small</font>
                        <align>right,vcenter</align>
                        <cutdown>yes</cutdown>
                    </textarea>
                </state>
                <!--
                        SELECTED INACTIVE
                -->
                <state name="selectedinactive" from="selectedactive"><alpha>200</alpha></state>
            </statetype>
        </buttonlist>

