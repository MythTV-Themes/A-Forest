    <window name="browser">
        <area>0,0,1280,720</area>
        <imagetype name="wallpaper" from="image_wallpaper_base">
            <filename>images/background-browser.png</filename>
        </imagetype>

        <textarea name="heading" from="textarea_heading_base">
            <textarea name="text">
                <template>Browser - %TITLE%</template>
            </textarea>
        </textarea>

        <textarea name="textarea_clock" from="textarea_clock_base"/>

        <shape name="status_background" from="shape_background_base"/>
        
        <buttonlist name="pagelist" from="base_selector_very_wide">
            <area>310,27,650,40</area>
        </buttonlist>

        <webbrowser name="webbrowser">
            <area>0,60,1280,660<area>
            <zoom>1</zoom>
        </webbrowser>

        <!-- these are optional -->
        <progressbar name="progressbar" from="base_progressbar">
            <area>50,600,1200,50</area>
        </progressbar>

        <textarea name="status" from="base_textarea">
            <area>270,670,740,40</area>
            <align>left,vcenter</align>
            <multiline>no</multiline>
        </textarea>
    </window>
