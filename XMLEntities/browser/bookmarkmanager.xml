    <window name="bookmarkmanager">
        <area>0,0,1280,720</area>
        <imagetype name="wallpaper" from="image_wallpaper_base">
            <area>0,0,1280,720</area>
            <filename>images/background-welcome.png</filename>
        </imagetype>

        <textarea name="heading" from="textarea_heading_base">
            <textarea name="text">
                <value>Welcome</value>
            </textarea>
        </textarea>

        <textarea name="textarea_clock" from="textarea_clock_base"/>

        <shape name="status_background" from="shape_background_base"/>

        <!-- information about the columns -->
        <textarea name="category_label" from="textarea_base">
            <area>130,112,150,30</area>
            <align>left,vcenter</align>
            <font>text_small</font>
            <value>Category</value>
        </textarea>
        <textarea name="select_label" from="textarea_base">
            <area>500,112,150,30</area>
            <align>left,vcenter</align>
            <font>text_small</font>
            <value>Select</value>
        </textarea>
        <textarea name="name_label" from="textarea_base">
            <area>600,112,150,30</area>
            <align>left,vcenter</align>
            <font>text_small</font>
            <value>Name</value>
        </textarea>
        <textarea name="url_label" from="textarea_base">
            <area>770,112,150,30</area>
            <align>left,vcenter</align>
            <font>text_small</font>
            <value>Url</value>
        </textarea>

        <!-- shows the bookmark categories -->
        <buttonlist name="grouplist" from="buttonlist_base">
            <area>130,160,350,447</area>
            <showarrow>yes</showarrow>
        </buttonlist>

        <!-- shows the bookmark in the selected category -->
        <buttonlist name="bookmarklist" from="buttonlist_base">
            <area>500,160,650,447</area>
            <statetype name="buttonitem">
                <state name="active">
                    <statetype name="buttoncheck">
                        <position>8,8</position>
                    </statetype>
                    <textarea name="name">
                        <area>50,5,200,30</area>
                        <font>text</font>
                        <align>left,vcenter</align>
                        <cutdown>yes</cutdown>
                    </textarea>
                    <textarea name="url">
                        <area>270,5,370,30</area>
                        <font>text</font>
                        <align>left,vcenter</align>
                        <cutdown>yes</cutdown>
                    </textarea>
                </state>
                <state name="selectedactive">
                    <statetype name="buttoncheck">
                        <position>8,8</position>
                    </statetype>
                    <textarea name="name">
                        <area>50,5,200,30</area>
                        <font>text</font>
                        <align>left,vcenter</align>
                        <cutdown>yes</cutdown>
                    </textarea>
                    <textarea name="url">
                        <area>270,5,370,30</area>
                        <font>text</font>
                        <align>left,vcenter</align>
                        <cutdown>yes</cutdown>
                    </textarea>
                </state>
                <state name="selectedinactive">
                    <statetype name="buttoncheck">
                        <position>8,8</position>
                    </statetype>
                    <textarea name="name">
                        <area>50,5,200,30</area>
                        <font>text_inactive</font>
                        <align>left,vcenter</align>
                        <cutdown>yes</cutdown>
                    </textarea>
                    <textarea name="url">
                        <area>270,5,370,30</area>
                        <font>text_inactive</font>
                        <align>left,vcenter</align>
                        <cutdown>yes</cutdown>
                    </textarea>
                </state>
            </statetype>
        </buttonlist>

        <textarea name="messagetext" from="textarea_base">
            <area>210,140,860,431</area>
            <align>allcenter</align>
            <multiline>yes</multiline>
        </textarea>
    </window>
