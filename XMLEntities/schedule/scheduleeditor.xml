    <window name="scheduleeditor">
        <imagetype name="background" from="image_wallpaper_base">
            <filename>images/backgrounds/tv2.jpg</filename>
        </imagetype>
        <textarea name="heading" from="textarea_heading_base">
            <textarea name="text">
                <value>Schedule Editor</value>
            </textarea>
        </textarea>
        <textarea name="textarea_clock" from="textarea_clock_base"/>

        <shape name="shape_header" from="shape_background_header"/>
        <shape name="shape_content" from="shape_background_content"/>

        <textarea name="title" from="textarea_base">
            <area>0,60,1280,50</area>
            <align>allcenter</align>
            <font>normal</font>
        </textarea>

        <!--
            INFO SECTION <area>0,150,1280,545</area>
        -->
        <textarea name="description" from="textarea_base">
            <area>50,185,880,80</area>
            <font>normal</font>
            <multiline>yes</multiline>
            <cutdown>yes</cutdown>
            <align>left,top</align>
            <template>%|"SUBTITLE|"% %STARS% %DESCRIPTION%</template>
        </textarea>
        <textarea name="channel">
            <area>930,185,300,30</area>
            <font>normal</font>
            <align>right,vcenter</align>
        </textarea>
        <textarea name="timedate">
            <area>930,210,300,30</area>
            <font>normal</font>
            <align>right,vcenter</align>
        </textarea>
<!--        <textarea name="rectypestatus">
            <area>930,225,300,30</area>
            <font>normal</font>
            <align>right,vcenter</align>
        </textarea>-->

        <shape name="shape_horiz" from="shape_line_horiz">
            <area>0,280,1280,2</area>
        </shape>

        <!-- the buttons for the different options -->
        <buttonlist name="rules" from="buttonlist_base_horiz">
            <area>340,310,600,30</area>
            <statetype name="upscrollarrow">
                <area>620,0,20,30</area>
            </statetype>
        </buttonlist>
        <button name="schedoptions">
            <area>490,360,300,30</area>
            <value>Schedule Options</value>
            <statetype name="buttonstate">
                <!--
                        ACTIVE
                -->
                <state name="active">
                    <shape name="button_background">
                        <area>0,0,300,34</area>
                        <type>roundbox</type>
                        <cornerradius>4</cornerradius>
                        <line color="#FFFFFF" alpha="150" width="1" />
                        <fill style="gradient">
                            <gradient direction="vertical" alpha="255">
                                <stop position="0" color="#474645" alpha="80" />
                                <stop position="100" color="#474645" />
                            </gradient>
                        </fill>
                    </shape>
                    <textarea name="text">
                        <area>0,0,300,34</area>
                        <align>allcenter</align>
                        <font>normal</font>
                    </textarea>
                </state>
                <!--
                        SELECTED ACTIVE
                -->
                <state name="selected" from="active">
                    <shape name="button_background">
                        <area>0,0,300,34</area>
                        <type>roundbox</type>
                        <cornerradius>4</cornerradius>
                        <line color="#FFFFFF" alpha="255" width="1" />
                        <fill color="#474645" alpha="255" />
                    </shape>
                </state>
                <!--
                        DISABLED
                -->
                <state name="disabled" from="active" />
                <!--
                        PUSHED
                -->
                <state name="pushed">
                    <shape name="button_background">
                        <area>1,1,300,34</area>
                        <type>roundbox</type>
                        <cornerradius>4</cornerradius>
                        <line color="#FFFFFF" alpha="255" width="1" />
                        <fill color="#474645" alpha="80" />
                    </shape>
                    <textarea name="text">
                        <area>2,2,300,34</area>
                        <align>allcenter</align>
                        <font>normal</font>
                    </textarea>
                </state>
            </statetype>
        </button>
        <button name="storeoptions" from="schedoptions">
            <area>490,410,300,30</area>
            <value>Storage Options</value>
        </button>
        <button name="postprocessing" from="schedoptions">
            <area>490,460,300,30</area>
            <value>Post Processing</value>
        </button>
        <button name="schedinfo" from="schedoptions">
            <area>490,510,300,30</area>
            <value>Schedule Info</value>
        </button>
        <button name="preview" from="schedoptions">
            <area>490,560,300,30</area>
            <value>Preview</value>
        </button>

        <button name="save" from="button_base">
            <area>495,630,120,30</area>
            <value>Save</value>
        </button>
        <button name="cancel" from="button_base">
            <area>650,630,120,30</area>
            <value>Cancel</value>
        </button>
    </window>
