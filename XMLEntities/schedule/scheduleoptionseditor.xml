    <window name="scheduleoptionseditor">
        <imagetype name="background" from="image_wallpaper_base">
            <filename>images/backgrounds/tv2.jpg</filename>
        </imagetype>
        <textarea name="heading" from="textarea_heading_base">
            <textarea name="text">
                <value>Schedule Editor</value>
            </textarea>
        </textarea>
        <textarea name="textarea_clock" from="textarea_clock_base"/>

        <shape name="shape_header" from="shape_background_header"/>
        <shape name="shape_content" from="shape_background_content"/>

        <textarea name="title" from="textarea_base">
            <area>0,60,1280,50</area>
            <align>allcenter</align>
            <font>normal</font>
        </textarea>

        <!--
            INFO SECTION <area>0,150,1280,545</area>
        -->
        <textarea name="description" from="textarea_base">
            <area>50,185,880,80</area>
            <font>normal</font>
            <multiline>yes</multiline>
            <cutdown>yes</cutdown>
            <align>left,top</align>
            <template>%|"SUBTITLE|"% %STARS% %DESCRIPTION%</template>
        </textarea>
        <textarea name="channel">
            <area>930,185,300,30</area>
            <font>normal</font>
            <align>right,vcenter</align>
        </textarea>
        <textarea name="timedate">
            <area>930,210,300,30</area>
            <font>normal</font>
            <align>right,vcenter</align>
        </textarea>
<!--        <textarea name="rectypestatus">
            <area>930,225,300,30</area>
            <font>normal</font>
            <align>right,vcenter</align>
        </textarea>-->

        <shape name="shape_horiz" from="shape_line_horiz">
            <area>0,280,1280,2</area>
        </shape>

        <!--
             EDITOR SECTION
        -->
        <spinbox name="priority" from="spinbox_base">
            <area>290,305,700,30</area>
            <statetype name="upscrollarrow">
                <area>720,0,20,30</area>
            </statetype>
            <template type="negative">Reduce priority by %n</template>
            <template type="zero">Normal recording priority</template>
            <template type="positive">Raise priority by %n</template>
        </spinbox>

        <buttonlist name="input" from="buttonlist_base_horiz">
            <area>290,355,700,30</area>
            <statetype name="upscrollarrow">
                <area>720,0,20,30</area>
            </statetype>
        </buttonlist>

        <spinbox name="startoffset" from="spinbox_base">
            <area>290,405,700,30</area>
            <statetype name="upscrollarrow">
                <area>720,0,20,30</area>
            </statetype>
            <template type="negative">Start recording %n minute(s) late</template>
            <template type="zero">Start recording on time</template>
            <template type="positive">Start recording %n minute(s) early</template>
        </spinbox>

        <spinbox name="endoffset" from="spinbox_base">
            <area>290,455,700,30</area>
            <statetype name="upscrollarrow">
                <area>720,0,20,30</area>
            </statetype>
            <template type="negative">End recording %n minute(s) early</template>
            <template type="zero">End recording on time</template>
            <template type="positive">End recording %n minute(s) late</template>
        </spinbox>
        <buttonlist name="dupmethod" from="buttonlist_base_horiz">
            <area>290,505,700,30</area>
            <statetype name="upscrollarrow">
                <area>720,0,20,30</area>
            </statetype>
        </buttonlist>
        <buttonlist name="dupscope" from="buttonlist_base_horiz">
            <area>290,555,700,30</area>
            <statetype name="upscrollarrow">
                <area>720,0,20,30</area>
            </statetype>
        </buttonlist>
        <checkbox name="ruleactive" from="checkbox_base">
            <area>500,600,30,30</area>
        </checkbox>
        <textarea name="ruleactivelabel" from="textarea_base">
            <area>550,600,300,30</area>
            <value>Recording Rule Active</value>
            <align>left,vcenter</align>
        </textarea>

        <button name="back" from="button_base">
            <area>580,640,120,30</area>
            <value>Back</value>
        </button>
    </window>
