    <window name="programrecpriority">
        <area>0,0,1280,720</area>
        <imagetype name="wallpaper" from="image_wallpaper_base">
            <filename>images/backgrounds/tv2.jpg</filename>
        </imagetype>

        <textarea name="heading" from="textarea_heading_base">
            <textarea name="text">
            <value>Schedule Priorities</value>
            </textarea>
        </textarea>

        <textarea name="clock" from="textarea_clock_base"/>

        <shape name="shape_header" from="shape_background_header"/>
        <shape name="shape_content" from="shape_background_content"/>

        <!-- ===================================================== -->
        <!--            SORTING ORDER                              -->
        <!-- ===================================================== -->
        <textarea name="keyinstr" from="textarea_base">
            <area>0,60,630,50</area>
            <align>right,vcenter</align>
            <font>normal</font>
            <value>Sort by (1) Title, (2) Priority, (4) Type</value>
        </textarea>
        <textarea name="curview" from="textarea_base">
            <area>650,60,640,50</area>
            <font>normal</font>
            <align>left,vcenter</align>
        </textarea>

        <!-- ===================================================== -->
        <!--     RECORDINGS RULES                                  -->
        <!-- ===================================================== -->
        <buttonlist name="programs" from="buttonlist_base">
            <arrange>stack</arrange>
            <area>0,150,1280,545</area>
            <statetype name="buttonitem">
             <!--
                        ACTIVE
                -->
                <state name="active">
                    <area>0,0,100%,40</area>
                    <textarea name="null">
                        <area>53,5,30,40</area>
                        <font>small</font>
                        <align>left,vcenter</align>
                    </textarea>
                    <textarea name="lastrecorded">
                        <area>90,5,210,40</area>
                        <font>small</font>
                        <align>left,vcenter</align>
                    </textarea>
                    <textarea name="channel">
                        <area>300,5,240,40</area>
                        <font>small</font>
                        <align>left,vcenter</align>
                    </textarea>
                    <textarea name="title">
                        <area>550,5,594,40</area>
                        <font>title_small</font>
                        <cutdown>yes</cutdown>
                        <align>left,vcenter</align>
                    </textarea>
                    <textarea name="finalpriority">
                        <area>925,5,320,28</area>
                        <font>small</font>
                        <align>right,vcenter</align>
                        <template>Final Priority: %finalpriority%</template>
                    </textarea>
                </state>
             <!--
                        SELECTED ACTIVE
                -->
                <state name="selectedactive" from="active">
                    <shape name="shadow_selected" from="shape_shadow_horiz">
                        <area>0,0,100%,100%</area>
                    </shape>
                    <area>0,0,100%,120</area>
                    <!-- FIRST ROW (JUST THE SAME) -->
                    <!-- SECOND ROW -->
                    <textarea name="description" from="textarea_base">
                        <area>53,45,867,45</area>
                        <font>small</font>
                        <multiline>yes</multiline>
                        <cutdown>yes</cutdown>
                        <align>left,top</align>
                        <template>%|"subtitle|"% %stars% %description%</template>
                    </textarea>
                    <textarea name="progpriority">
                        <area>925,33,320,28</area>
                        <align>right,vcenter</align>
                        <font>small</font>
                        <template>Program Priority : %progpriority%</template>
                    </textarea>
                    <textarea name="rectypepriority">
                        <area>925,61,320,28</area>
                        <align>right,vcenter</align>
                        <font>small</font>
                        <template>Type Priority : %storagegroup%</template>
                    </textarea>

                    <textarea name="rectype">
                        <area>53,90,200,30</area>
                        <align>left,vcenter</align>
                        <font>small</font>
                    </textarea>
                </state>
            </statetype>
        </buttonlist>
    </window>
