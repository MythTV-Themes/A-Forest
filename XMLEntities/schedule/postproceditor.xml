    <window name="postproceditor">
        <imagetype name="background" from="image_wallpaper_base">
            <filename>images/backgrounds/tv2.jpg</filename>
        </imagetype>
        <textarea name="heading" from="textarea_heading_base">
            <textarea name="text">
                <value>Schedule Editor</value>
            </textarea>
        </textarea>
        <textarea name="textarea_clock" from="textarea_clock_base"/>

        <shape name="shape_header" from="shape_background_header"/>
        <shape name="shape_content" from="shape_background_content"/>

        <textarea name="title" from="textarea_base">
            <area>0,60,1280,50</area>
            <align>allcenter</align>
            <font>normal</font>
        </textarea>

        <!--
            INFO SECTION <area>0,150,1280,545</area>
        -->
        <textarea name="description" from="textarea_base">
            <area>50,185,880,80</area>
            <font>normal</font>
            <multiline>yes</multiline>
            <cutdown>yes</cutdown>
            <align>left,top</align>
            <template>%|"SUBTITLE|"% %STARS% %DESCRIPTION%</template>
        </textarea>
        <textarea name="channel">
            <area>930,185,300,30</area>
            <font>normal</font>
            <align>right,vcenter</align>
        </textarea>
        <textarea name="timedate">
            <area>930,210,300,30</area>
            <font>normal</font>
            <align>right,vcenter</align>
        </textarea>
<!--        <textarea name="rectypestatus">
            <area>930,225,300,30</area>
            <font>normal</font>
            <align>right,vcenter</align>
        </textarea>-->

        <shape name="shape_horiz" from="shape_line_horiz">
            <area>0,280,1280,2</area>
        </shape>

        <!--
             EDITOR SECTION
        -->

        <checkbox name="autocommflag" from="checkbox_base">
            <area>350,305,30,30</area>
        </checkbox>
        <textarea name="autocommflaglabel" from="textarea_base">
            <area>400,305,600,30</area>
            <value>Commercial Flag new recordings</value>
            <align>left</align>
        </textarea>

        <checkbox name="autotranscode" from="checkbox_base">
            <area>350,355,30,30</area>
        </checkbox>
        <textarea name="autotranscodelabel" from="autocommflaglabel">
            <area>400,355,600,30</area>
            <value>Transcode new recordings</value>
        </textarea>
        <buttonlist name="transcodeprofile" from="buttonlist_base_horiz">
            <area>400,405,600,30</area>
            <statetype name="upscrollarrow">
                <area>620,0,20,30</area>
            </statetype>
        </buttonlist>

        <checkbox name="userjob1" from="checkbox_base">
            <area>350,455,30,30</area>
        </checkbox>
        <textarea name="userjob1label" from="autocommflaglabel">
            <area>400,455,600,30</area>
            <value>Run User Job #1</value>
        </textarea>

        <checkbox name="userjob2" from="checkbox_base">
            <area>350,505,30,30</area>
        </checkbox>
        <textarea name="userjob2label" from="autocommflaglabel">
            <area>400,505,600,30</area>
            <value>Run User job #2</value>
        </textarea>

        <checkbox name="userjob3" from="checkbox_base">
            <area>350,555,30,30</area>
        </checkbox>
        <textarea name="userjob3label" from="autocommflaglabel">
            <area>400,555,600,30</area>
            <value>Run User Job #3</value>
        </textarea>

        <checkbox name="userjob4" from="checkbox_base">
            <area>350,605,30,30</area>
        </checkbox>
        <textarea name="userjob4label" from="autocommflaglabel">
            <area>400,605,600,30</area>
            <value>Run User Job #4</value>
        </textarea>

        <button name="back" from="button_base">
            <area>580,640,120,30</area>
            <value>Back</value>
        </button>
    </window>
