    <window name="timepopup">
        <area>0,0,1280,720</area>
        <shape name="darken_background">
            <area>0,0,1280,720</area>
            <type>box</type>
            <fill color="#000000" alpha="127" />
        </shape>

        <shape name="popup_background">
            <area>500,160,320,400</area>
            <type>roundbox</type>
            <fill color="#000000" alpha="250" />
            <line color="#999999" alpha="250" width="1" />
            <cornerradius>2</cornerradius>
        </shape>

        <shape name="shape_title">
            <area>520,180,280,80</area>
            <type>rsoundbox</type>
            <fill style="gradient">
              <gradient direction="diagonal" alpha="255">
                <stop position="0" color="#202020" />
                <stop position="45" color="#262626" />
                <stop position="55" color="#303030" />
                <stop position="100" color="#7f7f7f" />
              </gradient>
            </fill>
            <line color="#FFFFFF" alpha="255" width="1" />
            <cornerradius>4</cornerradius>
        </shape>

        <textarea name="title_text">
            <area>520,180,280,80</area>
            <font>title</font>
            <multiline>yes</multiline>
            <align>allcenter</align>
            <cutdown>yes</cutdown>
            <value>Select Time</value>
        </textarea>

        <buttonlist name="date_list" from="buttonlist_base_horiz">
            <area>520,350,240,30</area>
        </buttonlist>
        
        <buttonlist name="time_list" from="date_list">
            <area>520,425,240,30</area>
        </buttonlist>

        <button name="ok_button" from="button_base">
            <area>520,500,280,30</area>
            <value>Ok</value>
        </button>
    </window>
