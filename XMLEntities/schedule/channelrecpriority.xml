<window name="channelrecpriority">
        <area>0,0,1280,720</area>
        <imagetype name="wallpaper" from="image_wallpaper_base">
            <area>0,0,1280,720</area>
            <filename>images/backgrounds/podium.jpg</filename>
        </imagetype>

        <textarea name="heading" from="textarea_heading_base">
            <textarea name="text">
                <value>Channel Rec. Prio.</value>
            </textarea>
        </textarea>

        <textarea name="textarea_clock" from="textarea_clock_base"/>
        <shape name="shape_header" from="shape_background_header"/>
        <shape name="shape_content" from="shape_background_content"/>

        <!-- ===================================================== -->
        <!--            SORTING ORDER                              -->
        <!-- ===================================================== -->
        <textarea name="keyinstr" from="textarea_base">
            <area>0,60,1280,50</area>
            <align>allcenter</align>
            <font>normal</font>
            <value>(1) Channel (2) Priority</value>
        </textarea>

        <!-- ===================================================== -->
        <!--            HEADERS                                    -->
        <!-- ===================================================== -->
        <textarea name="channum_label">
            <area>53,150,154,30</area>
            <font>title</font>
            <align>allcenter</align>
            <value>Channel</value>
        </textarea>
        <textarea name="callsign_label">
            <area>215,150,240,30</area>
            <font>title</font>
            <align>allcenter</align>
            <value>Callsign</value>
        </textarea>
        <textarea name="name_label">
            <area>485,150,300,30</area>
            <font>title</font>
            <align>allcenter</align>
            <value>Name</value>
        </textarea>
        <textarea name="sourcename_label">
            <area>850,150,200,30</area>
            <font>title</font>
            <align>allcenter</align>
            <value>Source</value>
        </textarea>
        <textarea name="priority_label">
            <area>1183,150,30,30</area>
            <font>title</font>
            <align>allcenter</align>
            <value>Priority</value>
        </textarea>

        <!-- ===================================================== -->
        <!--                  DATA                                 -->
        <!-- ===================================================== -->
        <buttonlist name="channels" from="buttonlist_base">
            <arrange>stack</arrange>
            <area>0,200,1280,490</area>
            <statetype name="buttonitem">
             <!--
                        ACTIVE
                -->
                <state name="active">
                    <area>0,0,1280,30</area>
                    <textarea name="channum">
                        <area>53,0,130,30</area>
                        <font>small</font>
                        <align>left,vcenter</align>
                    </textarea>
                    <textarea name="callsign">
                        <area>215,5,240,30</area>
                        <font>small</font>
                        <align>allcenter</align>
                    </textarea>
                    <textarea name="name">
                        <area>485,0,300,30</area>
                        <font>title_small</font>
                        <cutdown>yes</cutdown>
                        <align>allcenter</align>
                    </textarea>
                    <textarea name="sourcename">
                        <area>850,0,200,30</area>
                        <font>normal</font>
                        <align>allcenter</align>
                    </textarea>
                    <textarea name="priority">
                        <area>1183,0,30,30</area>
                        <font>normal</font>
                        <align>allcenter</align>
                    </textarea>
                </state>
                <state name="selectedactive" from="active">
                    <shape name="shadow_selected" from="shape_shadow_horiz">
                        <area>0,0,100%,100%</area>
                    </shape>
                </state>
            </statetype>
        </buttonlist>
    </window>