    <window name="programguide-video">
        <imagetype name="background" from="image_wallpaper_base">
            <filename>images/backgrounds/tv.jpg</filename>
        </imagetype>
        <textarea name="heading" from="textarea_heading_base">
            <textarea name="text">
                <value>Schedule</value>
            </textarea>
        </textarea>
        <textarea name="datetext" from="textarea_base">
            <area>10,0,240,40</area>
            <font>big</font>
            <align>left,vcenter</align>
        </textarea>

        <textarea name="textarea_clock" from="textarea_clock_base"/>

        <!-- ===================================================== -->
        <!--     PROGRAM GRID                                      -->
        <!-- ===================================================== -->
        <shape name="background_base" from="shape_background_base">
            <fill color="#000000" alpha="220" />
        </shape>

        <shape name="timelista_separator_a" from="shape_line_horiz">
            <area>26,105,1228,2</area>
        </shape>

        <shape name="channellist_separator_a" from="shape_line_vert">
            <area>250,71,2,520</area>
        </shape>

        <shape name="gridelist_separator_a" from="shape_line_horiz">
            <area>26,511,1228,2</area>
        </shape>


        <guidegrid name="guidegrid">
            <area>256,115,990,402</area>
            <layout>horizontal</layout>
            <channels>6</channels>
            <timeslots>4</timeslots>
            <solidcolor>#003256</solidcolor>
            <!-- selection box, this needs to be improved -->
            <selector type="box" fillcolor="#8a4979"/>
<!--            <selector type="box" fillcolor="#5f5f5f" linecolor="#999999"/>-->
            <showcategories>yes</showcategories>
            <categoryalpha>90</categoryalpha>
            <recordingcolor>#00AA00</recordingcolor>
            <conflictingcolor>#FF6600</conflictingcolor>
            <cutdown>yes</cutdown>
            <multiline>yes</multiline>
            <textoffset>4,4</textoffset>
            <!-- the status of the recording. These are letters
                that are shown in the affected tv program timeslot -->
            <recordstatus type="SingleRecord"     image="images/tv-recordings/scheduled-status/single.png"/>
            <recordstatus type="TimeslotRecord" image="images/tv-recordings/scheduled-status/timeslot.png"/>
            <recordstatus type="ChannelRecord"    image="images/tv-recordings/scheduled-status/channel.png"/>
            <recordstatus type="AllRecord"            image="images/tv-recordings/scheduled-status/all.png"/>
            <recordstatus type="WeekslotRecord" image="images/tv-recordings/scheduled-status/weekslot.png"/>
            <recordstatus type="FindOneRecord"    image="images/tv-recordings/scheduled-status/findone.png"/>
            <recordstatus type="OverrideRecord" image="images/tv-recordings/scheduled-status/override.png"/>
            <arrow direction="left" image="images/shared/arrow_left.png"/>
            <arrow direction="right" image="images/shared/arrow_right.png"/>
            <font>verysmall</font>
        </guidegrid>

     <!-- ===================================================== -->
     <!--     VERTICAL CHANNEL LIST                                                             -->
     <!-- ===================================================== -->
        <textarea name="channelgroup" from="textarea_base">
            <area>26,79,220,20</area>
            <align>allcenter</align>
            <font>normal</font>
        </textarea>

        <buttonlist name="channellist">
            <area>26,115,220,402</area>
            <layout>vertical</layout>
            <spacing>0</spacing>
            <buttonarea>0,0,220,469</buttonarea>
            <statetype name="buttonitem">
                <state name="active">
                    <imagetype name="channelicon">
                        <area>4,16,35,35</area>
                    </imagetype>
                    <textarea name="buttontext" from="textarea_base">
                        <area>47,0,215,67</area>        <!--15 more the space-->
<!--                        <area>4,0,220,67</area>-->
                        <font>small</font>
                        <font state="favourite">text_small_yellow</font>
                        <font state="unavailable">text_small_blue</font>
                        <font state="favunavailable">text_small_purple</font>
                        <cutdown>yes</cutdown>
                        <align>left,vcenter</align>
                    </textarea>
                    <shape name="channellist_separator" from="shape_line_horiz">
                        <area>0,65,220,2</area>
                    </shape>
                </state>
                <state name="selectedactive" from="active"/>
                <state name="selectedinactive" from="active"/>
            </statetype>
            <statetype name="upscrollarrow">
                <position>159,-5</position>
            </statetype>
            <statetype name="downscrollarrow">
                <position>159,335</position>
            </statetype>
        </buttonlist>


     <!-- ===================================================== -->
     <!--     HORIZONTAL TIME SLOTS                                                             -->
     <!-- ===================================================== -->
        <buttonlist name="timelist">
            <area>220,79,1036,20</area>
            <layout>horizontal</layout>
            <spacing>0</spacing>
            <buttonarea>0,0,1036,20</buttonarea>
            <statetype name="buttonitem">
                <area>0,0,258,20</area>
                <state name="active">
                    <imagetype name="buttonbackground">
                        <area>0,0,258,20</area>
                        <filename />
                    </imagetype>
                    <textarea name="buttontext" from="textarea_base">
                        <area>0,0,258,20</area>
                        <font>normal</font>
                        <align>allcenter</align>
                    </textarea>
                </state>
                <state name="selectedactive" from="active"/>
                <state name="selectedinactive" from="active"/>
            </statetype>
            <!-- show the arrow image that indicates that there are
            more menu entries above the first visible menu -->
            <statetype name="upscrollarrow">
                <position>11,-4</position>
                <state type="off">
                    <imagetype name="upon">
                        <filename>images/shared/arrow_left.png</filename>
                        <alpha>90</alpha>
                    </imagetype>
                </state>
                <state type="full">
                    <imagetype name="upoff">
                        <filename>images/shared/arrow_left.png</filename>
                    </imagetype>
                </state>
            </statetype>
            <!-- show the arrow image that indicates that there are
            more menu entries below the last visible menu -->
            <statetype name="downscrollarrow">
                <position>1010,-4</position>
                <state type="off">
                    <imagetype name="dnon">
                        <filename>images/shared/arrow_right.png</filename>
                        <alpha>90</alpha>
                    </imagetype>
                </state>
                <state type="full">
                    <imagetype name="dnoff">
                        <filename>images/shared/arrow_right.png</filename>
                    </imagetype>
                </state>
            </statetype>
        </buttonlist>

        <!-- ===================================================== -->
        <!--     PROGRAM DETAILS                                                                         -->
        <!-- ===================================================== -->
        <!-- this is the background for the information at the bottom -->

        <textarea name="title" from="textarea_base">
            <area>325,532,600,30</area>
            <multiline>no</multiline>
            <align>left,vcenter</align>
            <cutdown>yes</cutdown>
            <font>title</font>
        </textarea>
        <textarea name="subtitle" from="textarea_base">
            <area>325,562,600,30</area>
            <multiline>no</multiline>
            <align>left,vcenter</align>
            <cutdown>yes</cutdown>
            <font>normal</font>
        </textarea>

        <textarea name="channel" from="textarea_base">
            <area>820,532,400,20</area>
            <align>right,top</align>
            <cutdown>yes</cutdown>
            <font>small</font>
        </textarea>

        <textarea name="description" from="textarea_base">
            <area>325,597,895,75</area>
            <multiline>yes</multiline>
            <cutdown>yes</cutdown>
            <align>left,top</align>
            <template>%YEARSTARS% %DESCRIPTION% %LONGREPEAT%</template>
            <font>verysmall</font>
        </textarea>

        <textarea name="timedate" from="textarea_base">
            <area>325,662,330,20</area>
            <align>left,bottom</align>
            <cutdown>yes</cutdown>
            <font>small</font>
        </textarea>

        <textarea name="rectypestatus" from="textarea_base">
            <area>820,662,400,20</area>
            <align>right,bottom</align>
            <font>small</font>
        </textarea>

        <!-- the shape around the livetv video -->
        <shape name="video_shape" from="base_background_shape">
            <area>27,519,290,165</area>
        </shape>

        <!-- the livetv video itself -->
        <imagetype name="video">
            <area>29,521,286,161</area>
        </imagetype>
</window>

