    <!--CONFLICT PAGE-->
    <window name="viewscheduled">
        <imagetype name="background" from="image_wallpaper_base">
            <filename>images/backgrounds/tv2.jpg</filename>
        </imagetype>
        <textarea name="heading" from="textarea_heading_base">
            <textarea name="text">
                <value>Schedule</value>
            </textarea>
        </textarea>
        <textarea name="textarea_clock" from="textarea_clock_base"/>

        <shape name="shape_header" from="shape_background_header"/>
        <shape name="shape_content" from="shape_background_content"/>

        <!-- information about the sorting order -->
<!--        <shape name="info_background" from="shape_background_base">
            <area>280,640,720,30</area>
        </shape>-->
        <textarea name="keyinstr">
            <area>150,660,350,30</area>
            <align>left,vcenter</align>
            <multiline>no</multiline>
            <font>small</font>
            <value>Sort by (1) Time, (2) Important</value>
        </textarea>
        <textarea name="status">
            <area>500,660,725,30</area>
            <font>small</font>
            <font state="warning">text_small_warning</font>
            <multiline>no</multiline>
            <align>right,vcenter</align>
        </textarea>


    <!-- the selection of available recording groups -->
    <!--    <buttonlist name="groups" from="buttonlist_base">
          <area>46,91,350,312</area>
        </buttonlist>-->
        <!-- ============================ -->
        <!--          DATE LIST           -->
        <!-- ============================ -->
        <buttonlist name="groups">
            <area>50,70,1180,30</area>
            <spacing>20</spacing>
            <layout>horizontal</layout>
            <buttonarea>0,0,1180,30</buttonarea>
            <align>allcenter</align>
            <statetype name="buttonitem">
              <!--
                  ACTIVE
              -->
              <state name="active">
                  <area>0,0,150,30</area>
                  <textarea name="buttontext" from="textarea_base"/>
              </state>
              <!--
                  SELECTED ACTIVE
              -->
              <state name="selectedactive">
                  <area>0,0,150,30</area>
                  <shape name="dates_background_selecteditem">
                      <area>0,-20,160,70</area>
                      <type>box</type>
                      <fill color="#000000" alpha="200" />
                      <line color="#AAAAAA" alpha="150" width="1" />
                  </shape>
                  <textarea name="buttontext" from="textarea_base"/>
              </state>
              <state name="inactive" from="active">
                <alpha>150</alpha>
              </state>
              <state name="selectedinactive" from="selectedactive"/>
            </statetype>
        </buttonlist>

        <!-- ===================================================== -->
        <!--   SCHEDULED LIST                                      -->
        <!-- ===================================================== -->
        <buttonlist name="schedules" from="buttonlist_base">
          <area>0,150,1280,530</area>
          <arrange>stack</arrange>
          <statetype name="buttonitem">
          <!--
                ACTIVE
            -->
            <state name="active">
              <area>0,0,100%,40</area>
              <textarea name="shortstarttimedate">
                <area>58,5,154,40</area>
                <font>small</font>
                <align>left,vcenter</align>
              </textarea>
              <textarea name="channel">
                <area>220,5,240,40</area>
                <font>small</font>
                <align>left,vcenter</align>
              </textarea>
              <textarea name="titlesubtitle">
                <area>490,5,700,40</area>
                <font>title_small</font>
                <cutdown>yes</cutdown>
                <align>left,vcenter</align>
              </textarea>
              <textarea name="card">
                <area>1198,5,30,40</area>
                <font>normal</font>
                <align>right,vcenter</align>
              </textarea>
            </state>
          <!--
                SELECTED ACTIVE
            -->
            <state name="selectedactive" from="active">
              <shape name="shadow_selected" from="shape_shadow_horiz">
                  <area>0,0,100%,100%</area>
              </shape>
              <area>0,0,100%,120</area>
              <textarea name="rectypestatus">
                <area>730,99,500,20</area>
                <align>right,vcenter</align>
                <font>small</font>
              </textarea>
              <textarea name="description" from="textarea_base">
                <area>58,35,1190,90</area>
                <font>small</font>
                <multiline>yes</multiline>
                <cutdown>yes</cutdown>
                <align>left,top</align>
              </textarea>
            </state>
            <!--
                INACTIVE
            -->
            <state name="inactive" from="active">
                <alpha>200</alpha>
            </state>
          <!--
                SELECTED INACTIVE
            -->
            <state name="selectedinactive" from="selectedactive">
                <alpha>200</alpha>
            </state>
          </statetype>
        </buttonlist>
        <!-- ===================================================== -->
        <!--   NO RECORDINGS TEXT                                  -->
        <!-- ===================================================== -->
        <textarea name="norecordings_info" from="textarea_base">
          <area>40,625,1190,347</area>
          <align>allcenter</align>
            <value>You Haven't Scheduled Any Programs To Be Recorded.
          To schedule a recording, exit this screen and select
          'Program Guide' or 'Program Finder'</value>
          <multiline>yes</multiline>
        </textarea>
    </window>