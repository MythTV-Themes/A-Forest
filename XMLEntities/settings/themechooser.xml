    <window name="themechooser">
        <area>0,0,1280,720</area>
        <imagetype name="wallpaper" from="image_wallpaper_base">
            <area>0,0,1280,720</area>
            <filename>images/backgrounds/aspect.jpg</filename>
        </imagetype>
        <imagetype name="layer" from="image_wallpaper_layer"/>

        <textarea name="heading" from="textarea_heading_base">
            <textarea name="text">
                <value>Theme Chooser</value>
            </textarea>
        </textarea>

        <textarea name="textarea_clock" from="textarea_clock_base"/>
        <shape name="status_background" from="shape_background_base"/>

        <!-- ===================================================== -->
        <!--             THEMES LIST                               -->
        <!-- ===================================================== -->
        <buttonlist name="themes" from="buttonlist_base">
            <arrange>stack</arrange>
<!--            <area>45,140,1190,550</area>-->
            <area>0,80,1280,610</area>
            <statetype name="buttonitem">
             <!--
                        ACTIVE
                -->
                <state name="active">
                    <area>0,0,100%,90</area>
                    <textarea name="buttontext"><area>0,0,0,0</area></textarea>
                    <textarea name="name">
                        <area>380,5,520,40</area>
                        <font>title_small</font>
                        <align>allcenter</align>
                    </textarea>
                    <textarea name="authorname">
                        <area>900,50,300,30</area>
                        <font>small</font>
                        <align>right,vcenter</align>
                    </textarea>
                    <imagetype name="buttonimage">
                        <area>50,5,141,80</area>
                        <filename/>
                        <preserveaspect>true</preserveaspect>
                    </imagetype>
                    <textarea name="resolution">
                        <area>900,5,300,30</area>
                        <align>right,vcenter</align>
                        <template>%resolution% %(|aspect|)%</template>
                    </textarea>
                </state>
             <!--
                        SELECTED ACTIVE
                -->
                <state name="selectedactive" from="active">
                    <shape name="shadow_selected" from="shape_shadow_horiz">
                        <area>0,0,100%,100%</area>
                    </shape>
                    <area>0,0,100%,210</area>
                    <!-- FIRST ROW (JUST THE SAME) -->
                    <!-- SECOND ROW -->
                    <imagetype name="buttonimage">
                        <area>50,5,355,200</area>
                        <filename/>
                        <preserveaspect>true</preserveaspect>
                    </imagetype>
                    <textarea name="description" from="textarea_base">
                        <area>450,50,780,150</area>
                        <font>small</font>
                        <multiline>yes</multiline>
                        <cutdown>yes</cutdown>
                        <align>left,top</align>
                    </textarea>
                    <textarea name="authorname">
                        <area>900,160,300,30</area>
                    </textarea>
                </state>
            </statetype>
        </buttonlist>


      <progressbar name="downloadprogressbar" from="progressbar_base">
          <area>800,670,100,10</area>
      </progressbar>
