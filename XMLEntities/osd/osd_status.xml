<!--
    The playback position of the current item.
-->
    <window name="osd_status">
        <area>530,150,750,100</area>

        <fontdef name="normal" face="Abadi MT">
            <color>#FFFFFF</color>
            <pixelsize>22</pixelsize>
            <weight>light</weight>
            <stretch>6</stretch>
        </fontdef>

        <shape name="shape_background">
           <area>0,0,850,100</area>
            <type>box</type>
            <fill color="#000000" alpha="205" />
            <line color="#AAAAAA" alpha="150" width="1" />
        </shape>

        <textarea name="title">
            <area>50,30,200,30</area>
            <font>small</font>
            <align>left</align>
            <multiline>false</multiline>
            <template>%TITLE% :</template>
        </textarea>

        <textarea name="playedtime">
            <area>50,30,700,30</area>
            <font>small</font>
            <align>right</align>
            <multiline>false</multiline>
<!--            <template>%TITLE% : %DESCRIPTION% %VALUE%%UNITS%</template>-->
            <template>%PLAYEDTIME% of %TOTALTIME% %(|REMAININGTIME| remaining)%</template>
        </textarea>

        <progressbar name="position">
            <area>50,60,700,10</area>
            <layout>horizontal</layout>
            <style>reveal</style>
            <imagetype name="background">
                <area>0,0,650,10</area>
                <filename>images/shared/progressbar/progressbar_background.png</filename>
            </imagetype>
            <imagetype name="progressimage">
                <area>0,0,650,10</area>
                <filename>images/shared/progressbar/progressbar_fill.png</filename>
            </imagetype>
        </progressbar>
    </window>
