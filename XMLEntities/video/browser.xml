    <window name="browser">
        <area>0,0,1280,720</area>
        <imagetype name="background" from="image_wallpaper_base">
            <filename>images/backgrounds/chairs-ratatouille.png</filename>
        </imagetype>
        <imagetype name="fanart" from="image_wallpaper_base"/>
        <textarea name="heading" from="textarea_heading_base">
            <textarea name="text">
                <value>Video Browser</value>
            </textarea>
        </textarea>

        <textarea name="textarea_clock" from="textarea_clock_base"/>

        <shape name="shape_header" from="shape_background_header"/>
        <textarea name="breadcrumbs" from="textarea_base">
            <area>20,60,1060,50</area>
            <align>left,vcenter</align>
            <font>big</font>
        </textarea>
        <textarea name="position" from="textarea_base">
            <area>1080,60,190,50</area>
            <align>right,vcenter</align>
            <font>small</font>
            <cutdown>yes</cutdown>
        </textarea>

        <shape name="shape_background_content" from="shape_background_base">
            <area>-5,130,1290,595</area>
        </shape>

<!--
    INFO SECTION
-->
        <textarea name="title" from="textarea_base">
            <area>20,160,820,30</area>
            <multiline>no</multiline>
            <font>menu</font>
            <align>left</align>
<!--             <template>%|title|%% (|year|)%</template> -->
            <template>%title% (%year%)</template>
            <cutdown>yes</cutdown>
        </textarea>


        <!--(w/h=5,414)-->
        <imagetype name="banner">
            <area>900,168,350,65</area>
            <filename />
            <preserveaspect>true</preserveaspect>
        </imagetype>

        <statetype name="userratingstate" from="statetype_baserating">
            <area>1130,140,120,24</area>
        </statetype>

        <!--(w/h=1,47)-->
        <imagetype name="coverart">
            <area>20,200,200,300</area>
            <filename />
            <preserveaspect>true</preserveaspect>
            <!--<reflection axis="vertical" shear="25" scale="65" length="20"/>-->
        </imagetype>

        <textarea name="subtitle" from="textarea_base">
            <area>240,200,582,30</area>
            <font>normal</font>
            <multiline>yes</multiline>
            <cutdown>yes</cutdown>
            <align>left,top</align>
        </textarea>

        <textarea name="##x##" from="textarea_base">
            <area>780,200,100,30</area>
            <font>normal</font>
            <multiline>yes</multiline>
            <cutdown>yes</cutdown>
            <align>right,top</align>
        </textarea>

        <textarea name="description" from="textarea_base">
            <area>240,240,1000,60</area>
            <font>verysmall</font>
            <multiline>yes</multiline>
            <cutdown>yes</cutdown>
            <align>left,top</align>
        </textarea>

        <textarea name="director_label">
            <area>240,310,100,30</area>
            <multiline>no</multiline>
            <font>verysmall</font>
            <align>left,vcenter</align>
            <cutdown>yes</cutdown>
            <value>Director:</value>
        </textarea>
        <textarea name="director" from="director_label">
            <area>340,310,855,30</area>
        </textarea>
        <textarea name="cast_label" from="director_label">
            <area>240,335,200,30</area>
            <value>Cast:</value>
        </textarea>
        <textarea name="cast" from="director_label">
            <area>340,335,560,30</area>
        </textarea>
        <textarea name="length">
            <area>240,490,150,30</area>
            <multiline>no</multiline>
            <font>verysmall</font>
            <align>left,vcenter</align>
            <cutdown>yes</cutdown>
        </textarea>
        <!--(w/h=1,77)-->
        <imagetype name="screenshot">
            <area>930,300,330,185</area>
            <filename />
            <preserveaspect>true</preserveaspect>
        </imagetype>
        <textarea name="filename" from="textarea_base">
            <area>700,490,550,30</area>
            <multiline>no</multiline>
            <font>verysmall</font>
            <align>right,vcenter</align>
            <cutdown>yes</cutdown>
        </textarea>

<!--        <shape name="shape_background_videos">
            <area>0,520,1200,200</area>
            <type>box</type>
            <fill color="#000000" alpha="235" />
        </shape>-->
<!--
  BOTTOM LINE
-->
        <buttonlist name="videos">
            <area>0,520,1280,210</area>
            <align>allcenter</align>
            <layout>horizontal</layout>
            <spacing>8</spacing>
            <wrapstyle>items</wrapstyle>
            <scrollstyle>center</scrollstyle>
            <arrange>fixed</arrange>
            <buttonarea>0,0,1280,170</buttonarea>
            <statetype name="buttonitem">
                <state name="active">
                    <area>0,0,113,170</area>
                    <shape name="item_background">
                        <area>0,0,113,170</area>
                        <type>box</type>
                        <fill color="#000000" alpha="200" />
                        <line color="#FFFFFF" alpha="60" width="0" />
                        <!--<cornerradius>8</cornerradius>-->
                    </shape>
                    <imagetype name="buttonimage">
                        <alpha>200</alpha>
                        <area>0,0,113,170</area>
                        <preserveaspect>true</preserveaspect>
                        <reflection axis="vertical" shear="5" scale="40" length="30"/>
                        <filename/>
                    </imagetype>
                    <textarea name="buttontext">
                        <align>allcenter</align>
                        <area>0,0,113,170</area>
                        <font>verysmall_shadow</font>
                        <multiline>yes</multiline>
                        <cutdown>yes</cutdown>
                        <!--<template>%##x##% %|buttontext|%</template>-->
                    </textarea>
                    <statetype name="nodetype">
                        <state name="subfolder">
                            <imagetype name="icon">
                                <area>0,140,45,45</area>
                                <preserveaspect>true</preserveaspect>
                                <filename>images/shared/folder-movies.png</filename>
                            </imagetype>
                        </state>
                        <state name="upfolder" from="subfolder">
                            <imagetype name="icon">
                                <filename>images/shared/folder-movies-up.png</filename>
                            </imagetype>
                        </state>
                    </statetype>
                    <textarea name="childcount">
                        <align>left,vcenter</align>
                        <area>45,135,60,35</area>
                        <font>verysmall_shadow</font>
                        <multiline>yes</multiline>
                        <cutdown>yes</cutdown>
                    </textarea>
                </state>
                <state name="selectedactive" from="active">
                    <shape name="item_background">
                        <area>-20,-30,140,210</area>
                        <type>box</type>
                        <fill color="#000000" alpha="250" />
                       <line color="#FFFFFF" alpha="60" width="0" />
                        <cornerradius>8</cornerradius>-->
                    </shape>
                    <imagetype name="buttonimage">
                        <area>-20,-30,140,210</area>
                        <preserveaspect>true</preserveaspect>
                        <filename/>
                    </imagetype>
                    <textarea name="buttontext">
                        <area>-20,-30,140,210</area>
                    </textarea>
                    <statetype name="nodetype">
                        <state name="subfolder">
                            <imagetype name="icon">
                                <area>-20,150,55,55</area>
                                <preserveaspect>true</preserveaspect>
                                <filename>images/shared/folder-movies.png</filename>
                            </imagetype>
                        </state>
                        <state name="upfolder" from="subfolder">
                            <imagetype name="icon">
                                <filename>images/shared/folder-movies-up.png</filename>
                            </imagetype>
                        </state>
                    </statetype>
                    <textarea name="childcount">
                        <area>35,155,55,55</area>
                        <font>small_shadow</font>
                    </textarea>
                </state>
            </statetype>
            <statetype name="upscrollarrow">
                <area>10,540,30,20</area>
                <state type="off">
                    <imagetype name="upon">
                        <filename>images/shared/arrow_up.png</filename>
                        <alpha>90</alpha>
                    </imagetype>
                </state>
                <state type="full">
                    <imagetype name="upoff">
                        <filename>images/shared/arrow_up.png</filename>
                    </imagetype>
                </state>
            </statetype>
            <statetype name="downscrollarrow">
                <area>40,540,30,20</area>
                <state type="off">
                    <imagetype name="dnon">
                        <filename>images/shared/arrow_down.png</filename>
                        <alpha>90</alpha>
                    </imagetype>
                </state>
                <state type="full">
                    <imagetype name="dnoff">
                        <filename>images/shared/arrow_down.png</filename>
                    </imagetype>
                </state>
            </statetype>
        </buttonlist>
    </window>
