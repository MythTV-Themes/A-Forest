    <window name="importsettings">

        <!-- the background image of the screen -->
        <imagetype name="background">
            <area>0,0,1280,720</area>
            <filename>images/background-video.png</filename>
        </imagetype>
        <!-- the description of the screen that is shown in the top left corner -->
        <textarea name="heading" from="base_heading">
            <position>0,0</position>
            <textarea name="text">
                <value>Import Settings</value>
            </textarea>
        </textarea>
        <!-- the clock that is shown in the top right corner -->
        <textarea name="clock" from="base_clock">
            <position>1040,0</position>
        </textarea>

        <!-- the large rectangular shape -->
        <shape name="importsettings_background" from="base_background_shape">
            <area>165,180,950,380</area>
        </shape>

        <textarea name="dvdriplocation_label" from="base_textarea">
            <area>240,200,400,40</area>
            <align>right,vcenter</align>
            <value>Directory to hold temporary files:</value>
        </textarea>
        <textarea name="titleplaycommand_label" from="base_textarea">
            <area>240,250,400,40</area>
            <align>right,vcenter</align>
            <value>Title Playing Command:</value>
        </textarea>
        <textarea name="subtitlecommand_label" from="base_textarea">
            <area>240,300,400,40</area>
            <align>right,vcenter</align>
            <value>Subtitle arguments:</value>
        </textarea>
        <textarea name="transcodecommand_label" from="base_textarea">
            <area>240,350,400,40</area>
            <align>right,vcenter</align>
            <value>Base transcode command:</value>
        </textarea>

        <textedit name="dvdriplocation" from="base_textedit">
            <area>650,200,280,40</area>
        </textedit>
        <textedit name="titleplaycommand" from="base_textedit">
            <area>650,250,280,40</area>
        </textedit>
        <textedit name="subtitlecommand" from="base_textedit">
            <area>650,300,280,40</area>
        </textedit>
        <textedit name="transcodecommand" from="base_textedit">
            <area>650,350,280,40</area>
        </textedit>

        <shape name="helptext_background" from="base_background_shape">
            <area>185,401,910,80</area>
        </shape>
        <textarea name="helptext" from="base_textarea">
            <area>205,401,870,80</area>
            <cutdown>yes</cutdown>
            <align>allcenter</align>
            <multiline>yes</multiline>
        </textarea>

        <button name="save" from="base_button">
            <position>480,500</position>
            <value>Save</value>
        </button>
        <button name="cancel" from="base_button">
            <position>650,500</position>
            <value>Cancel</value>
        </button>
    </window>
