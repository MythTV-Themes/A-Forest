    <window name="manager">
        <area>0,0,1280,720</area>
        <imagetype name="background" from="image_wallpaper_base">
            <filename>images/backgrounds/chairs-ratatouille.png</filename>
        </imagetype>
        <imagetype name="fanart" from="image_wallpaper_base"/>
        <textarea name="heading" from="textarea_heading_base">
            <textarea name="text">
                <value>Video Manager</value>
            </textarea>
        </textarea>

        <textarea name="textarea_clock" from="textarea_clock_base"/>

        <shape name="shape_header" from="shape_background_header"/>
        <textarea name="breadcrumbs" from="textarea_base">
            <area>20,60,1060,50</area>
            <align>left,vcenter</align>
            <font>big</font>
        </textarea>
        <textarea name="position" from="textarea_base">
            <area>1080,60,190,50</area>
            <align>right,vcenter</align>
            <font>small</font>
            <cutdown>yes</cutdown>
        </textarea>

        <shape name="shape_content" from="shape_background_content"/>

        <textarea name="novideos" from="base_textarea">
            <area>100,130,1080,570</area>
            <multiline>yes</multiline>
            <align>allcenter</align>
            <value>No videos in library, or no files found. If you have configured a video directory, press "M" (or the MENU key) and select "Scan for Changes."</value>
        </textarea>

        <buttonlist name="videos" from="buttonlist_base">
            <arrange>stack</arrange>
            <area>0,150,1280,545</area>
            <statetype name="buttonitem">
             <!--
                        ACTIVE live parentale, rating, user rating
                -->
                <state name="active">
                    <area>0,0,100%,40</area>
                    <statetype name="buttoncheck">
                        <state type="off">
                            <imagetype name="checkoff">
                                <filename/>
                            </imagetype>
                        </state>
                    </statetype>
                    <statetype name="nodetype">
                        <state name="subfolder">
                            <imagetype name="icon">
                                <area>50,5,30,30</area>
                                <preserveaspect>true</preserveaspect>
                                <filename>images/shared/folder-movies.png</filename>
                            </imagetype>
                        </state>
                        <state name="upfolder">
                            <imagetype name="icon">
                                <area>50,5,30,30</area>
                                <preserveaspect>true</preserveaspect>
                                <filename>images/shared/folder-movies-up.png</filename>
                            </imagetype>
                        </state>
                    </statetype>
                    <textarea name="buttontext">
                        <area>50,5,700,40</area>
                        <font>title</font>
                        <cutdown>yes</cutdown>
                        <align>allcenter</align>
                    </textarea>
                    <textarea name="rating">
                        <area>870,5,320,40</area>
                        <font>small</font>
                        <align>right,vcenter</align>
                        <template>Rated: %rating%</template>
                    </textarea>
                </state>
             <!--
                        SELECTED ACTIVE
                -->
                <state name="selectedactive" from="active">
                    <shape name="line_a"><alpha>255</alpha></shape>
                    <shape name="line_b"><alpha>255</alpha></shape>
                    <area>0,0,100%,120</area>
                    <!-- FIRST ROW (JUST THE SAME) -->
                    <!-- SECOND ROW -->
                    <textarea name="description" from="textarea_base">
                        <area>53,40,1180,80</area>
                        <font>verysmall</font>
                        <multiline>yes</multiline>
                        <cutdown>yes</cutdown>
                        <align>left,top</align>
                    </textarea>
                    <statetype name="userratingstate" from="statetype_baserating">
                        <area>50,5,120,24</area>
                    </statetype>
                    <textarea name="videolevel">
                        <area>925,85,320,30</area>
                        <align>right,vcenter</align>
                        <font>small</font>
                        <template>Parental Lvl: %videolevel%</template>
                    </textarea>
                </state>
            </statetype>
        </buttonlist>
    </window>
