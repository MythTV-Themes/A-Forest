        <textedit name="parentallevel4" from="base_textedit_narrow">
            <position>650,470</position>
        </textedit>

        <shape name="helptext_background" from="base_background_shape">
            <area>145,526,990,80</area>
        </shape>
        <textarea name="helptext" from="base_textarea">
            <area>165,526,960,80</area>
            <cutdown>yes</cutdown>
            <align>allcenter</align>
            <multiline>yes</multiline>
        </textarea>

        <button name="save" from="base_button">
            <position>480,625</position>
            <value>Save</value>
        </button>
        <button name="cancel" from="base_button">
            <position>650,625</position>
            <value>Cancel</value>
        </button>
    </window>
