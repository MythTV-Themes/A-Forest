        <textarea name="parentallevel1_label" from="base_textarea">
            <area>200,320,440,40</area>
            <align>right,vcenter</align>
            <value>PL 1 default search string:</value>
        </textarea>
        <textarea name="parentallevel2_label" from="base_textarea">
            <area>200,370,440,40</area>
            <align>right,vcenter</align>
            <value>PL 2 default search string:</value>
        </textarea>
        <textarea name="parentallevel3_label" from="base_textarea">
            <area>200,420,440,40</area>
            <align>right,vcenter</align>
            <value>PL 3 default search string:</value>
        </textarea>
        <textarea name="parentallevel4_label" from="base_textarea">
            <area>200,470,440,40</area>
            <align>right,vcenter</align>
            <value>PL 4 default search string:</value>
        </textarea>

        <buttonlist name="defaultparentallevel" from="base_selector">
            <position>650,110</position>
        </buttonlist>
        <textedit name="adminpassword4" from="base_textedit_narrow">
            <position>410,160</position>
        </textedit>
        <textedit name="adminpassword3" from="base_textedit_narrow">
            <position>650,160</position>
        </textedit>
        <textedit name="adminpassword2" from="base_textedit_narrow">
            <position>890,160</position>
        </textedit>
        <checkbox name="aggressivepc" from="base_checkbox">
            <position>650,215</position>
        </checkbox>

        <shape name="separator1" from="base_separator_shape">
            <area>145,260,990,1</area>
        </shape>

        <checkbox name="parentallevelfromrating" from="base_checkbox">
            <position>650,275</position>
        </checkbox>
        <textedit name="parentallevel1" from="base_textedit_narrow">
            <position>650,320</position>
        </textedit>
        <textedit name="parentallevel2" from="base_textedit_narrow">
            <position>650,370</position>
        </textedit>
        <textedit name="parentallevel3" from="base_textedit_narrow">
            <position>650,420</position>
