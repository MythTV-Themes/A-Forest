            <position>0,0</position>
            <textarea name="text">
                <value>Parental Settings</value>
            </textarea>
        </textarea>
        <!-- the clock that is shown in the top right corner -->
        <textarea name="clock" from="base_clock">
            <position>1040,0</position>
        </textarea>

        <!-- the large rectangular shape -->
        <shape name="parentalsettings_background" from="base_background_shape">
            <area>125,90,1030,595</area>
        </shape>

        <textarea name="defaultparentallevel_label" from="base_textarea">
            <area>200,110,440,40</area>
            <align>right,vcenter</align>
            <value>Starting Parental Level:</value>
        </textarea>
        <textarea name="adminpassword4_label" from="base_textarea">
            <area>150,160,250,40</area>
            <align>right,vcenter</align>
            <value>PIN for Parental Level 4:</value>
        </textarea>
        <textarea name="adminpassword3_label" from="base_textarea">
            <area>590,160,50,40</area>
            <align>right,vcenter</align>
            <value>3:</value>
        </textarea>
        <textarea name="adminpassword2_label" from="base_textarea">
            <area>830,160,50,40</area>
            <align>right,vcenter</align>
            <value>2:</value>
        </textarea>
        <textarea name="aggressivepc_label" from="base_textarea">
            <area>200,210,440,40</area>
            <align>right,vcenter</align>
            <value>Aggressive Parental Control:</value>
        </textarea>

        <textarea name="parentallevelfromrating_label" from="base_textarea">
            <area>160,270,480,40</area>
