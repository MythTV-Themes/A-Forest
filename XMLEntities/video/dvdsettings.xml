    <window name="dvdsettings">

        <!-- the background image of the screen -->
        <imagetype name="background">
            <area>0,0,1280,720</area>
            <filename>images/background-video.png</filename>
        </imagetype>
        <!-- the description of the screen that is shown in the top left corner -->
        <textarea name="heading" from="base_heading">
            <position>0,0</position>
            <textarea name="text">
                <value>DVD Settings</value>
            </textarea>
        </textarea>
        <!-- the clock that is shown in the top right corner -->
        <textarea name="clock" from="base_clock">
            <position>1040,0</position>
        </textarea>

        <!-- the large rectangular shape -->
        <shape name="dvdsettings_background" from="base_background_shape">
            <area>165,160,950,430</area>
        </shape>

        <textarea name="dvdoninsertdvd_label" from="base_textarea">
            <area>200,180,440,40</area>
            <align>right,vcenter</align>
            <value>On DVD insertion:</value>
        </textarea>
        <textarea name="dvddrivespeed_label" from="base_textarea">
            <area>200,230,440,40</area>
            <align>right,vcenter</align>
            <value>DVD Drive Speed:</value>
        </textarea>
        <textarea name="enabledvdbookmark_label" from="base_textarea">
            <area>200,280,440,40</area>
            <align>right,vcenter</align>
            <value>Enable DVD Bookmark Support:</value>
        </textarea>
        <textarea name="dvdbookmarkprompt_label" from="base_textarea">
            <area>200,330,440,40</area>
            <align>right,vcenter</align>
            <value>DVD Bookmark Prompt:</value>
        </textarea>
        <textarea name="dvdbookmarkdays_label" from="base_textarea">
            <area>200,380,440,40</area>
            <align>right,vcenter</align>
            <value>Remove DVD Bookmarks Older than (days):</value>
        </textarea>

        <buttonlist name="dvdoninsertdvd" from="base_selector">
            <area>650,180,280,40</area>
        </buttonlist>
        <spinbox name="dvddrivespeed" from="base_spinbox">
            <area>650,230,280,40</area>
        </spinbox>
        <checkbox name="enabledvdbookmark" from="base_checkbox">
            <area>650,285,280,40</area>
        </checkbox>
        <checkbox name="dvdbookmarkprompt" from="base_checkbox">
            <area>650,335,280,40</area>
        </checkbox>
        <spinbox name="dvdbookmarkdays" from="base_spinbox">
            <area>650,380,280,40</area>
        </spinbox>

        <shape name="helptext_background" from="base_background_shape">
            <area>185,431,910,80</area>
        </shape>
        <textarea name="helptext" from="base_textarea">
            <area>205,431,870,80</area>
            <cutdown>yes</cutdown>
            <align>allcenter</align>
            <multiline>yes</multiline>
        </textarea>

        <button name="save" from="base_button">
            <position>480,530</position>
            <value>Save</value>
        </button>
        <button name="cancel" from="base_button">
            <position>650,530</position>
            <value>Cancel</value>
        </button>
    </window>
