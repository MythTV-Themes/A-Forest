    <window name="metadatasettings">
        <area>0,0,1280,720</area>
        <imagetype name="wallpaper" from="image_wallpaper_base">
            <area>0,0,1280,720</area>
            <filename>images/backgrounds/dvd-settings.jpg</filename>
        </imagetype>
        <shape name="status_background" from="shape_background_base">
            <fill color="#000000" alpha="200"/>
        </shape>

        <textarea name="heading" from="textarea_heading_base">
            <textarea name="text">
                <value>Player Settings</value>
            </textarea>
        </textarea>

        <textarea name="textarea_clock" from="textarea_clock_base"/>


        <textarea name="movie_text" from="textarea_base">
            <area>260,150,240,40</area>
            <value>Movie Grabber:</value>
            <align>right,vcenter</align>
        </textarea>
        <textarea name="tv_text" from="textarea_base">
            <area>260,200,240,40</area>
            <value>TV Grabber:</value>
            <align>right,vcenter</align>
        </textarea>
        <textarea name="trailercheck_text" from="textarea_base">
            <area>110,250,390,40</area>
            <value>Enable Random Trailer Playback:</value>
            <align>right,vcenter</align>
        </textarea>
        <textarea name="unknownfilecheck_text" from="textarea_base">
            <area>110,300,390,40</area>
            <value>Display unknown file types:</value>
            <align>right,vcenter</align>
        </textarea>
        <textarea name="treeloadsmetacheck_text" from="textarea_base">
            <area>110,350,390,40</area>
            <value>Enable metadata in file browse mode:</value>
            <align>right,vcenter</align>
        </textarea>
        <textarea name="trailerplay_text" from="textarea_base">
            <area>260,400,240,40</area>
            <value>Trailers to Play:</value>
            <align>right,vcenter</align>
        </textarea>

        <buttonlist name="moviegrabber" from="buttonlist_base">
            <position>510,150</position>
        </buttonlist>
        <buttonlist name="tvgrabber" from="buttonlist_base">
            <position>510,200</position>
        </buttonlist>
        <checkbox name="randomtrailercheck" from="checkbox_base">
            <position>510,255</position>
        </checkbox>
        <spinbox name="trailernum" from="spinbox_base">
            <position>510,300</position>
        </spinbox>
        <checkbox name="unknownfilecheck" from="checkbox_base">
            <position>510,355</position>
        </checkbox>
        <checkbox name="treeloadsmetacheck" from="checkbox_base">
            <position>510,405</position>
        </checkbox>


        <textarea name="helptext" from="textarea_base">
            <area>130,461,1020,80</area>
            <cutdown>yes</cutdown>
            <align>allcenter</align>
            <multiline>yes</multiline>
        </textarea>

        <button name="ok" from="button_base">
            <position>415,560</position>
            <value>OK</value>
        </button>
        <button name="cancel" from="button_base">
            <position>715,560</position>
            <value>Cancel</value>
        </button>
    </window>
