    <window name="playersettings">
        <area>0,0,1280,720</area>
        <imagetype name="wallpaper" from="image_wallpaper_base">
            <area>0,0,1280,720</area>
            <filename>images/backgrounds/dvd-settings.jpg</filename>
        </imagetype>
        <shape name="status_background" from="shape_background_base">
            <fill color="#000000" alpha="200" />
        </shape>

        <textarea name="heading" from="textarea_heading_base">
            <textarea name="text">
                <value>Player Settings</value>
            </textarea>
        </textarea>

        <textarea name="textarea_clock" from="textarea_clock_base"/>

        <textarea name="defaultplayer_text" from="textarea_base">
            <area>300,150,240,30</area>
            <align>vcenter,right</align>
            <value>Default Player:</value>
        </textarea>
        <textedit name="defaultplayer" from="textedit_base">
            <area>560,150,300,30</area>
        </textedit>

        <textarea name="dvdplayer_text" from="textarea_base">
            <area>300,200,240,30</area>
            <align>vcenter,right</align>
            <value>DVD Player:</value>
        </textarea>
        <textedit name="dvdplayer" from="textedit_base">
            <area>560,200,300,30</area>
        </textedit>

        <textarea name="dvddrive_text" from="textarea_base">
            <area>300,250,240,30</area>
            <align>vcenter,right</align>
            <value>DVD Drive:</value>
        </textarea>
        <textedit name="dvddrive" from="textedit_base">
            <area>560,250,300,30</area>
        </textedit>

        <textarea name="vcdplayer_text" from="textarea_base">
            <area>300,300,240,30</area>
            <align>vcenter,right</align>
            <value>VCD Player:</value>
        </textarea>
        <textedit name="vcdplayer" from="textedit_base">
            <area>560,300,600,30</area>
        </textedit>


        <textarea name="vcddrive_text" from="textarea_base">
            <area>300,350,240,30</area>
            <align>vcenter,right</align>
            <value>VCD Drive:</value>
        </textarea>

        <textedit name="vcddrive" from="textedit_base">
            <area>560,350,300,30</area>
        </textedit>

        <textarea name="altcheck_text" from="textarea_base">
            <area>200,400,340,30</area>
            <align>vcenter,right</align>
            <value>Enable Alternate Player:</value>
        </textarea>
        <checkbox name="altcheck" from="checkbox_base">
            <area>560,400,30,30</area>
        </checkbox>
        <textedit name="altplayer" from="textedit_base">
            <area>620,400,300,30</area>
        </textedit>


        <textarea name="helptext" from="textarea_base">
            <area>200,460,870,80</area>
            <cutdown>yes</cutdown>
            <align>allcenter</align>
            <multiline>yes</multiline>
        </textarea>

        <shape name="shape_horiz" from="shape_line_horiz">
            <area>0,570,1280,2</area>
        </shape>

        <button name="ok" from="button_base">
            <area>460,610,120,34</area>
            <value>OK</value>
        </button>
        <button name="cancel" from="button_base">
            <area>700,610,120,34</area>
            <value>Cancel</value>
        </button>
    </window>
