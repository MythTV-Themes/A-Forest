        <fontdef name="menu" from="normal">
            <pixelsize>32</pixelsize>
            <weight>bold</weight>
            <color>#FFFFFF</color>
            <shadowcolor>#000000</shadowcolor>
            <!--stretch>unstretched</stretch-->
            <letterspacing>0</letterspacing>
            <wordspacing>0</wordspacing>
        </fontdef>
        <fontdef name="menu_active" from="menu">
            <pixelsize>34</pixelsize>
        </fontdef>
        <fontdef name="menu_description" from="menu">
            <pixelsize>20</pixelsize>
            <letterspacing>0</letterspacing>
