<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mythuitheme SYSTEM "../mythuitheme.dtd">
<mythuitheme>
    <window name="backgroundwindow">
        <area>0,0,1280,720</area>
    </window><!--
<area>0,0,1280,720</area>
<area>Xposition,Yposition,Width,Height</area>
-->
        <!-- ===================================================== -->
        <!--     IMAGETYPE                                         -->
        <!-- ===================================================== -->
        <imagetype name="image_wallpaper_base">
            <area>0,0,1280,720</area>
        </imagetype>
        <imagetype name="image_wallpaper_layer">
            <area>0,0,1280,720</area>
            <filename>images/backgrounds/layer.png</filename>
        </imagetype>

        <!-- ===================================================== -->
        <!--     SHAPE                                             -->
        <!-- ===================================================== -->
        <shape name="shape_background_base">
            <!--        <area>20,48,1240,650</area>-->
            <area>-5,60,1290,640</area>
            <type>box</type>
            <fill color="#000000" alpha="190" />
            <line color="#AAAAAA" alpha="150" width="1" />
        </shape>

        <!--Second type of windows, with header-->
        <shape name="shape_background_header" from="shape_background_base">
            <area>-5,60,1290,50</area>
        </shape>
        <shape name="shape_background_content" from="shape_background_base">
            <area>-5,130,1290,570</area>
        </shape>

        <shape name="shape_popup_background">
            <area>400,60,480,600</area>
            <type>roundbox</type>
            <fill color="#000000" alpha="240" />
            <line color="#999999" alpha="250" width="1" />
            <cornerradius>2</cornerradius>
        </shape>

       <shape name="shape_separator_base">
            <area>0,0,100,1</area>
            <type>box</type>
            <line color="#AAAAAA" alpha="150" width="1" />
        </shape>

        <shape name="shape_darken_base">
            <area>0,0,1280,720</area>
            <type>box</type>
            <fill color="#000000" alpha="110" />
        </shape>

        <shape name="shape_title_base">
            <area>270,80,740,80</area>
            <type>roundbox</type>
            <fill style="gradient">
                <gradient direction="diagonal" alpha="255">
                    <stop position="0" color="#202020" />
                    <stop position="45" color="#262626" />
                    <stop position="55" color="#303030" />
                    <stop position="100" color="#7f7f7f" />
                </gradient>
            </fill>
            <line color="#FFFFFF" alpha="255" width="1" />
            <cornerradius>4</cornerradius>
        </shape>

        <shape name="shape_line_horiz">
            <fill style="gradient">
                <gradient direction="horizontal" alpha="255">
<!--                     <stop position="0" color="#131313" alpha="50"/> -->
                    <stop position="0" color="#4D3F3F" />
                    <stop position="50" color="#FFFFFF"/>
                    <stop position="100" color="#4D3F3F" />
<!--                     <stop position="100" color="#131313" alpha="50"/> -->
                </gradient>
            </fill>
        </shape>

        <shape name="shape_line_vert">
            <fill style="gradient">
                <gradient direction="vertical" alpha="255 ">
                    <stop position="0" color="#4D3F3F" />
                    <stop position="50" color="#FFFFFF"/>
                    <stop position="100" color="#4D3F3F" />
                </gradient>
            </fill>
        </shape>

        <shape name="shape_shadow_horiz">
            <fill style="gradient">
                <gradient direction="horizontal" alpha="240">
                    <stop position="0" color="#131313" alpha="50"/>
                    <stop position="25" color="#4D3F3F" />
                    <stop position="50" color="#575757"/>
                    <stop position="75" color="#4D3F3F" />
                    <stop position="100" color="#131313" alpha="50"/>
                </gradient>
            </fill>
        </shape>

        <!-- ===================================================== -->
        <!--     FONT                                              -->
        <!-- ===================================================== -->
        <fontdef name="normal" face="Abadi MT">
            <!--color>#7e7e7e</color-->
            <color>#FFFFFF</color>
            <pixelsize>22</pixelsize>
            <weight>light</weight>
<!--             <stretch>6</stretch> -->
