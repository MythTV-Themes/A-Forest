        <!-- ===================================================== -->
        <!--     STATETYPE_BASERATING                              -->
        <!-- ===================================================== -->

        <statetype name="statetype_baserating">
            <showempty>yes</showempty>
            <state name="0">
                <imagetype name="stars">
                    <area>0,0,120,24</area>
                    <filename>images/shared/rating/0.png</filename>
                </imagetype>
            </state>
            <state name="1" from="0">
                <imagetype name="stars">
                    <filename>images/shared/rating/1.png</filename>
                </imagetype>
            </state>
            <state name="2" from="0">
                <imagetype name="stars">
                    <filename>images/shared/rating/2.png</filename>
                </imagetype>
            </state>
            <state name="3" from="0">
                <imagetype name="stars">
