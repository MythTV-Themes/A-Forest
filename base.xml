        <!-- ===================================================== -->
        <!--     TEXTAREA                                                                                        -->
        <!-- ===================================================== -->
        <textarea name="textarea_base">
            <area>0,0,100%,30</area>
            <font>normal</font>
            <multiline>no</multiline>
            <align>allcenter</align>
        </textarea>

    <!--    <textarea name="textarea_warning_base" from="textarea_base">
            <shape name="pippo">
                <colorcycle start="#000000" end="#ffffff" steps="255"/>
            </shape>
        </textarea>-->

        <!-- the header -->
        <textarea name="textarea_heading_base">
            <position>0,0</position>
            <shape name="heading_background" from="shape_background_base">
                <type>box</type>
                <area>-10,-10,960,50</area>
            </shape>
            <textarea name="text" from="textarea_base">
                <area>320,0,640,40</area>
                <font>title_small</font>
                <align>allcenter</align>
            </textarea>
        </textarea>

        <!-- The clock -->
        <textarea name="textarea_clock_base">
            <area>965,-10,330,50</area>
            <shape name="heading_background" from="shape_background_base">
                <type>box</type>
                <area>0,0,330,50</area>
            </shape>
            <clock name="text">
                <area>5,10,310,40</area>
                <font>small</font>
                <template>%DATE%, %TIME%</template>
                <align>allcenter</align>
                <cutdown>no</cutdown>
            </clock>
        </textarea>


        <!-- ===================================================== -->
        <!--     TEXTEDIT                                                                                        -->
        <!-- ===================================================== -->
        <textedit name="textedit_base">
            <area>0,0,180,30</area>
            <statetype name="background">
                <state name="active">
                    <area>0,0,100%,100%</area>
                    <shape name="background">
                        <area>0,0,100%,100%</area>
                        <type>box</type>
                        <line color="#FFFFFF" alpha="120" width="0" />
                        <fill color="#6D6B6B" alpha="120" />
                    </shape>
                </state>
                <state name="selected">
                    <area>0,0,100%,100%</area>
                    <shape name="background">
                        <area>0,0,100%,100%</area>
                        <type>box</type>
                        <line color="#FFFFFF" alpha="255" width="0" />
                        <fill color="#6D6B6B" alpha="255" />
                    </shape>
                </state>
                <state name="inactive">
                    <area>0,0,100%,100%</area>
                    <shape name="background">
                        <area>0,0,100%,100%</area>
                        <type>box</type>
                        <line color="#FFFFFF" alpha="90" width="0" />
                        <fill color="#6D6B6B" alpha="90" />
                    </shape>
                </state>
            </statetype>
            <imagetype name="cursor">
                <shape name="cursor_shape">
                    <area>0,4,2,26</area>
                    <type>box</type>
                    <fill color="#FFFFFF" alpha="255" />
                </shape>
            </imagetype>
            <textarea name="text">
                <area>2,0,99%,100%</area>
                <font>normal</font>
                <align>left,vcenter</align>
            </textarea>
        </textedit>


        <!-- ===================================================== -->
        <!--     CHECKBOX                                                                                    -->
        <!-- ===================================================== -->
        <checkbox name="checkbox_base">
            <area>0,0,30,30</area>
            <statetype name="background">
                <state name="active">
                    <shape name="background">
                        <area>0,0,30,30</area>
                        <type>box</type>
                        <line color="#6D6B6B" alpha="255" width="2" />
                        <fill color="#FFFFFF" alpha="50" />
                    </shape>
                </state>
                <state name="selected">
                    <shape name="background">
                        <area>0,0,30,30</area>
                        <type>box</type>
                        <line color="#FFFFFF" alpha="255" width="2" />
                        <fill color="#FFFFFF" alpha="80" />
                    </shape>
                </state>
                <state name="disabled" />
            </statetype>
            <statetype name="checkstate">
                <area>0,0,30,30</area>
                <state type="off">
                </state>
                <state type="half">
                    <imagetype name="background">
                        <area>-3,-3,36,36</area>
                        <preserveaspect>true</preserveaspect>
                        <filename>images/shared/check_half.png</filename>
                    </imagetype>
                </state>
                <state type="full">
                    <imagetype name="background">
                        <area>-3,-3,36,36</area>
                        <preserveaspect>true</preserveaspect>
                        <filename>images/shared/check_full.png</filename>
                    </imagetype>
                </state>
            </statetype>
        </checkbox>
        <!-- ====================================================== -->
        <!--     BUTTON                                             -->
        <!-- ====================================================== -->
        <button name="button_base">
            <statetype name="buttonstate">
                <!--
                        ACTIVE
                -->
                <state name="active">
                    <shape name="button_background">
                        <area>0,0,120,34</area>
                        <type>roundbox</type>
                        <cornerradius>4</cornerradius>
                        <line color="#FFFFFF" alpha="150" width="1" />
                        <fill style="gradient">
                            <gradient direction="vertical" alpha="255">
                                <stop position="0" color="#474645" alpha="80" />
                                <stop position="100" color="#474645" />
                            </gradient>
                        </fill>
                    </shape>
                    <textarea name="text">
                        <area>0,0,120,34</area>
                        <align>allcenter</align>
                        <font>normal</font>
                    </textarea>
                </state>
                <!--
                        SELECTED ACTIVE
                -->
                <state name="selected" from="active">
                    <shape name="button_background">
                        <area>0,0,120,34</area>
                        <type>roundbox</type>
                        <cornerradius>4</cornerradius>
                        <line color="#FFFFFF" alpha="255" width="1" />
                        <fill color="#474645" alpha="255" />
                    </shape>
                </state>
                <!--
                        DISABLED
                -->
                <state name="disabled" from="active" />
                <!--
                        PUSHED
                -->
                <state name="pushed">
                    <shape name="button_background">
                        <area>1,1,120,34</area>
                        <type>roundbox</type>
                        <cornerradius>4</cornerradius>
                        <line color="#FFFFFF" alpha="255" width="1" />
                        <fill color="#474645" alpha="80" />
                    </shape>
                    <textarea name="text">
                        <area>2,2,120,34</area>
                        <align>allcenter</align>
                        <font>normal</font>
                    </textarea>
                </state>
            </statetype>
        </button>

        <button name="button_image">
            <statetype name="buttonstate">
                <!--
                        ACTIVE
                -->
                <state name="active">
                    <shape name="button_background">
                        <area>0,0,35,35</area>
                        <type>box</type>
                        <line color="#FFFFFF" alpha="150" width="1" />
                    </shape>
                </state>
                <!--
                        SELECTED ACTIVE
                -->
                <state name="selected" from="active">
                    <shape name="button_background">
                        <line color="#FFFFFF" alpha="255" width="1" />
                    </shape>
                </state>
                <!--
                        DISABLED
                -->
                <state name="disabled" from="active">
                    <alpha>150</alpha>
                </state>
                <!--
                        PUSHED
                -->
                <state name="pushed" from="active">
                    <shape name="button_background">
                        <area>1,1,35,34</area>
                        <type>box</type>
                        <line color="#FFFFFF" alpha="255" width="1" />
                        <fill color="#474645" alpha="80" />
                    </shape>
                </state>
            </statetype>
        </button>

        <!-- ===================================================== -->
        <!--     BUTTONLIST                                        -->
        <!-- ===================================================== -->
        <buttonlist name="buttonlist_base">
            <area>0,0,100,30</area>
            <layout>vertical</layout>
            <spacing>3</spacing>
            <wrapstyle>selection</wrapstyle>
            <arrange>stack</arrange>
            <buttonarea>0,0,100%,97%</buttonarea>
            <statetype name="buttonitem">
                <!--
                        ACTIVE
                -->
                <state name="active">
                    <area>0,0,100%,31</area>
                    <shape name="line_top" from="shape_line_horiz">
                        <area>0,-3,100%,2</area>
                    </shape>
                    <shape name="shadow_selected"/>
                    <shape name="line_bottom" from="shape_line_horiz">
                        <area>0,100%,100%,2</area>
                    </shape>
                    <textarea name="buttontext">
                        <alpha>255</alpha>
                        <area>0,1,100%,30</area>
                        <font>normal</font>
                        <multiline>no</multiline>
                        <align>allcenter</align>
                    </textarea>
                    <!-- checkbox -->
                    <statetype name="buttoncheck">
                        <area>91%,5,30,30</area>
                        <state type="off">
                            <imagetype name="checkoff">
                                <filename>images/shared/check_none.png</filename>
                            </imagetype>
                        </state>
                        <state type="half">
                            <imagetype name="checkhalf">
                                <filename>images/shared/check_half.png</filename>
                            </imagetype>
                        </state>
                        <state type="full">
                            <imagetype name="checkfull">
                                <filename>images/shared/check_full.png</filename>
                            </imagetype>
                        </state>
                    </statetype>
                    <imagetype name="buttonarrow">
                        <area>97%,2,30,30</area>
                        <filename>images/shared/arrow_right.png</filename>
                    </imagetype>
                </state>
                <!--
                        SELECTED ACTIVE
                -->
                <state name="selectedactive" from="active">
                    <area>0,0,100%,46</area>
                    <shape name="shadow_selected" from="shape_shadow_horiz">
                        <area>0,0,100%,100%</area>
                    </shape>
                    <textarea name="buttontext">
                        <area>0,1,100%,45</area>
                        <font>normal_selected</font>
                    </textarea>
                </state>
                <!--
                        INACTIVE
                -->
                <state name="inactive" from="active">
                    <alpha>200</alpha>
                </state>
                <!--
                        SELECTED INACTIVE
                -->
                <state name="selectedinactive" from="selectedactive">
                    <alpha>200</alpha>
                    <shape name="shadow_selected" from="shape_shadow_horiz">
                        <alpha>130</alpha>
                        <area>0,0,100%,100%</area>
                    </shape>
                </state>
            </statetype>
            <!--
                  ARROWS
            -->
            <statetype name="upscrollarrow">
                <area>10,97%,30,30</area>
                <state type="off">
                    <imagetype name="upon">
                        <filename>images/shared/arrow_up.png</filename>
                        <alpha>90</alpha>
                    </imagetype>
                </state>
                <state type="full">
                    <imagetype name="upoff">
                        <filename>images/shared/arrow_up.png</filename>
                    </imagetype>
                </state>
            </statetype>
            <statetype name="downscrollarrow">
                <area>40,97%,30,30</area>
                <state type="off">
                    <imagetype name="dnon">
                        <filename>images/shared/arrow_down.png</filename>
                        <alpha>90</alpha>
                    </imagetype>
                </state>
                <state type="full">
                    <imagetype name="dnoff">
                        <filename>images/shared/arrow_down.png</filename>
                    </imagetype>
                </state>
            </statetype>
        </buttonlist>

        <buttonlist name="buttonlist_base_horiz" from="buttonlist_base">
            <area>0,0,100,30</area>
            <layout>horizontal</layout>
            <buttonarea>20,0,200,30</buttonarea>
            <statetype name="buttonitem">
                <!--
                        SELECTED ACTIVE
                -->
                <state name="selectedactive" from="active">
                    <area>0,0,100%,31</area>
                    <shape name="shadow_selected" from="shape_shadow_horiz">
                        <area>0,0,100%,100%</area>
                    </shape>
                    <textarea name="buttontext">
                        <area>0,1,100%,30</area>
                    </textarea>
                </state>
                <!--
                        SELECTED INACTIVE
                -->
                <state name="selectedinactive" from="selectedactive">
                    <alpha>200</alpha>
                    <shape name="shadow_selected" from="shape_shadow_horiz">
                        <alpha>130</alpha>
                        <area>0,0,100%,100%</area>
                    </shape>
                </state>
            </statetype>
            <statetype name="downscrollarrow">
                <area>0,0,20,30</area>
                <state type="off">
                    <imagetype name="dnon">
                        <filename>images/shared/arrow_left.png</filename>
                        <alpha>90</alpha>
                    </imagetype>
                </state>
                <state type="full">
                    <imagetype name="dnoff">
                        <filename>images/shared/arrow_left.png</filename>
                    </imagetype>
                </state>
            </statetype>
            <statetype name="upscrollarrow">
                <area>260,0,20,30</area>
                <state type="off">
                    <imagetype name="upon">
                        <filename>images/shared/arrow_right.png</filename>
                        <alpha>90</alpha>
                    </imagetype>
                </state>
                <state type="full">
                    <imagetype name="upoff">
                        <filename>images/shared/arrow_right.png</filename>
                    </imagetype>
                </state>
            </statetype>
        </buttonlist>


