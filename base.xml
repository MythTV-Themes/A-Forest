        <!-- MUSIC FONTS -->
        <fontdef name="music" face="Abadi MT">
            <color>#FFFFFF</color>
            <pixelsize>22</pixelsize>
            <weight>normal</weight>
        </fontdef>
        <fontdef name="music_button" from="music">
            <color>#D9D9D9</color>
            <pixelsize>20</pixelsize>
        </fontdef>
        <fontdef name="music_tree" from="music">
