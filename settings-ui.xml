<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mythuitheme SYSTEM "../mythuitheme.dtd">
<mythuitheme>
    <window name="rawsettingseditor">
        <area>0,0,100%,100%</area>
        <imagetype name="wallpaper">
            <filename>images/backgrounds/background-settings.jpg</filename>
            <area>0,0,100%,100%</area>
        </imagetype>
        <group name="rawsettingseditor_title" from="group_title">
            <textarea name="text_window_title"><value>System Event command Editor</value></textarea>
        </group>
        <group name="rawsettingseditor_clock" from="group_clock"/>
        <group name="rawsettingseditor_content2" from="group_content2">
            <buttonlist name="settings" from="buttonlist_base">
                <area>20,20,1240,470</area>
            </buttonlist>

            <textarea name="label-text" from="textarea_base">
                <area>20,490,650,30</area>
                <align>left,vcenter</align>
            </textarea>
            <textedit name="settingvalue" from="textedit_base">
                <area>20,530,1240,30</area>
            </textedit>

            <button name="cancel" from="button_base">
                <area>400,580,120,35</area>
                <value>Cancel</value>
            </button>
            <button name="save" from="button_base">
                <area>820,580,120,35</area>
                <value>Save</value>
            </button>
        </group>
    </window>
    <window name="themechooser">
        <area>0,0,1280,720</area>
        <imagetype name="wallpaper" from="image_wallpaper_base">
            <area>0,0,1280,720</area>
            <filename>images/backgrounds/aspect.jpg</filename>
        </imagetype>

        <textarea name="heading" from="textarea_heading_base">
            <textarea name="text">
                <value>Theme Chooser</value>
            </textarea>
        </textarea>

        <textarea name="textarea_clock" from="textarea_clock_base"/>
        <shape name="status_background" from="shape_background_base"/>

        <!-- ===================================================== -->
        <!--             THEMES LIST                               -->
        <!-- ===================================================== -->
        <buttonlist name="themes" from="buttonlist_base">
            <arrange>stack</arrange>
            <area>0,80,1260,610</area>
            <shape name="shape_background_base">
                <area>10,0,1260,610</area>
             </shape>
            <buttonarea>20,0,1240,590</buttonarea>
            <statetype name="buttonitem">
                <state name="active">
                    <area>0,0,1240,90</area>
                    <shape name="shape_background_item">
                        <area>0,0,1240,90</area>
                    </shape>
                    <textarea name="buttontext">
                        <area>0,0,0,0</area>
                    </textarea>
                    <textarea name="name">
                        <area>380,5,520,40</area>
                        <font>title_small</font>
                        <align>allcenter</align>
                        <template>%name%% (v.|version%)</template>
                    </textarea>
                    <textarea name="authorname">
                        <area>900,50,300,30</area>
                        <font>small</font>
                        <align>right,vcenter</align>
                    </textarea>
                    <imagetype name="buttonimage">
                        <area>50,5,141,80</area>
                        <filename/>
                        <preserveaspect>true</preserveaspect>
                    </imagetype>
                    <textarea name="resolution">
                        <area>900,5,300,30</area>
                        <align>right,vcenter</align>
                        <template>%resolution% %(|aspect|)%</template>
                    </textarea>
                </state>
                <state name="selectedactive">
                    <area>0,0,1240,210</area>
                    <shape name="shape_background_item">
                        <area>0,0,1240,210</area>
                    </shape>
                    <textarea name="buttontext">
                        <area>0,0,0,0</area>
                    </textarea>
                    <textarea name="name">
                        <area>380,5,520,40</area>
                        <font>title_small</font>
                        <align>allcenter</align>
                        <template>%name%% (v.|version%)</template>
                    </textarea>
                    <textarea name="authorname">
                        <area>900,50,300,30</area>
                        <font>small</font>
                        <align>right,vcenter</align>
                    </textarea>
                    <textarea name="description" from="textarea_base">
                        <area>450,100,780,150</area>
                        <font>small</font>
                        <multiline>yes</multiline>
                        <cutdown>yes</cutdown>
                        <align>left,top</align>
                    </textarea>
                    <imagetype name="buttonimage">
                        <area>50,5,355,200</area>
                        <filename/>
                        <preserveaspect>true</preserveaspect>
                    </imagetype>
                    <textarea name="resolution">
                        <area>900,5,300,30</area>
                        <align>right,vcenter</align>
                        <template>%resolution% %(|aspect|)%</template>
                    </textarea>
                </state>
            </statetype>
        </buttonlist>
      <progressbar name="downloadprogressbar" from="progressbar_base">
          <area>800,670,100,10</area>
      </progressbar>
    </window>
</mythuitheme>
